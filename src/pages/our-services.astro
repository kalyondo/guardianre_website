---
import BaseLayout from '../layouts/BaseLayout.astro';

// Core broking services (1-6)
const coreBrokingServices = [
  {
    number: '01',
    name: 'Reinsurance Structuring',
    description: 'We design bespoke reinsurance programmes tailored to the specific risk profile, capital position, and strategic priorities of each client.',
    deliverables: ['Programme design and optimisation', 'Retention analysis and recommendations', 'Treaty wording review and development', 'Capacity allocation strategies']
  },
  {
    number: '02',
    name: 'Negotiation & Placement',
    description: 'Our experienced broking team negotiates with reinsurers on behalf of our clients to secure favourable terms, competitive pricing, and appropriate coverage.',
    deliverables: ['Market presentation and submission', 'Terms negotiation and benchmarking', 'Placement coordination across markets', 'Contract finalisation and documentation']
  },
  {
    number: '03',
    name: 'Reinsurance Security Analysis',
    description: 'We conduct rigorous assessments of reinsurer financial strength, creditworthiness, and claims-paying ability to inform counterparty decisions.',
    deliverables: ['Credit rating analysis and monitoring', 'Financial strength assessment', 'Counterparty concentration review', 'Security panel recommendations']
  },
  {
    number: '04',
    name: 'Catastrophe Management',
    description: 'Expert guidance on catastrophic risk exposures, including natural disasters, large-loss events, and accumulation scenarios.',
    deliverables: ['Catastrophe exposure assessment', 'Modelling and scenario analysis', 'Event response coordination', 'Loss estimation and notification']
  },
  {
    number: '05',
    name: 'Analytics, Products & Solutions',
    description: 'Our analytical capabilities enable data-driven decision-making across all aspects of reinsurance programme management.',
    deliverables: ['Portfolio performance analysis', 'Loss experience studies', 'Pricing support and validation', 'Product development assistance']
  },
  {
    number: '06',
    name: 'Portfolio Optimisation',
    description: 'We assist clients in optimising their reinsurance arrangements to achieve the most efficient use of capital while maintaining appropriate risk protection.',
    deliverables: ['Capital efficiency analysis', 'Programme cost-benefit assessment', 'Portfolio rebalancing recommendations', 'Risk-adjusted return analysis']
  },
];

// Advisory services (7-9)
const advisoryServices = [
  {
    number: '07',
    name: 'Peer Analysis & Benchmarking',
    description: 'Competitive intelligence and benchmarking services to help clients understand their market position relative to peers.',
    deliverables: ['Peer comparison studies', 'Market practice benchmarking', 'Performance metric analysis', 'Competitive positioning insights']
  },
  {
    number: '08',
    name: 'Rating Advisory',
    description: 'Expert guidance to insurers seeking to maintain or improve their credit ratings, covering reinsurance-related aspects of rating agency requirements.',
    deliverables: ['Rating agency liaison support', 'Reinsurance programme assessment', 'Documentation and presentation', 'Ongoing monitoring and advice']
  },
  {
    number: '09',
    name: 'Life & Health Reinsurance',
    description: 'Specialised broking services for life insurers, health insurers, and pension schemes, addressing the unique requirements of long-term risks.',
    deliverables: ['Life treaty placement', 'Health reinsurance solutions', 'Mortality and morbidity risk transfer', 'Product development support']
  },
];

// Operational services (10-12)
const operationalServices = [
  {
    number: '10',
    name: 'Market Intelligence',
    description: 'Guardian Re maintains close relationships with global reinsurance markets, providing timely and relevant market intelligence to support informed decision-making.',
    deliverables: ['Market trend analysis', 'Capacity and pricing updates', 'Regulatory development monitoring', 'Strategic market insights']
  },
  {
    number: '11',
    name: 'Policy Administration',
    description: 'Comprehensive administrative support for the ongoing management of reinsurance contracts, ensuring accurate documentation and efficient processing.',
    deliverables: ['Contract documentation management', 'Premium and claims bordereaux', 'Statement reconciliation', 'Regulatory reporting support']
  },
  {
    number: '12',
    name: 'Run-off Management',
    description: 'Professional run-off management services for clients with legacy portfolios or discontinued lines of business.',
    deliverables: ['Legacy portfolio assessment', 'Run-off strategy development', 'Claims management and commutation', 'Portfolio transfer facilitation']
  },
];

// Approach pillars
const approachPillars = [
  {
    title: 'Technical Expertise',
    description: 'Deep knowledge of reinsurance structures, markets, and best practices.',
    icon: 'academic'
  },
  {
    title: 'Client-Centric',
    description: 'Understanding your business before recommending solutions.',
    icon: 'users'
  },
  {
    title: 'Independent Advice',
    description: 'Objective guidance aligned with your interests.',
    icon: 'scale'
  },
];
---

<BaseLayout title="Our Services | Guardian Reinsurance Brokers">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black py-20 md:py-28 overflow-hidden">
    <!-- Decorative sun rays -->
    <div class="absolute top-0 right-0 w-96 h-96 opacity-10">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        {[...Array(16)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 22.5) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 22.5) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="2"
          />
        ))}
        <circle cx="100" cy="100" r="30" fill="#CBA875" opacity="0.3"/>
      </svg>
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="hero-animate-badge inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-sm text-white mb-6 backdrop-blur-sm">
          <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
          Full-Service Reinsurance Advisory
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-6">
          <span class="hero-animate-heading-1 block">Broking & Advisory</span>
          <span class="hero-gold-shimmer block">Services</span>
        </h1>

        <p class="hero-animate-subheading text-xl text-white/90 leading-relaxed max-w-2xl mx-auto">
          Comprehensive reinsurance broking and advisory services designed to support your strategic objectives across twelve distinct areas of expertise.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-lg text-gray-600 leading-relaxed mb-8">
          Guardian Re provides comprehensive reinsurance broking and advisory services to insurance companies operating in Zambia and across the African continent. We have evolved from traditional placement services to offer fully integrated reinsurance advisory and broking solutions.
        </p>

        <!-- Service Count Badge -->
        <div class="inline-flex items-center gap-3 px-6 py-3 bg-guardian-green text-white rounded-full">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          <span class="text-lg font-semibold">12 Strategic Services</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Broking Services Grid -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="mb-12">
        <span class="inline-block px-4 py-1 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Services 01-06</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
          Core Broking Services
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl">
          Essential reinsurance broking capabilities delivered by experienced professionals with deep technical knowledge.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {coreBrokingServices.map((service) => (
          <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition-all duration-300 group flex flex-col">
            <div class="w-10 h-10 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-lg flex items-center justify-center text-white font-bold mb-4 group-hover:scale-110 transition-transform">
              {service.number}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">{service.name}</h3>
            <p class="text-sm text-gray-600 mb-4 leading-relaxed">{service.description}</p>

            <!-- Deliverables -->
            <div class="border-t border-gray-100 pt-4 mt-auto">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Key Deliverables</p>
              <ul class="space-y-1">
                {service.deliverables.map((item) => (
                  <li class="text-sm text-gray-600 flex items-start gap-2">
                    <span class="w-1 h-1 bg-guardian-gold rounded-full mt-2 flex-shrink-0"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Advisory Services -->
  <section class="section bg-white">
    <div class="container">
      <div class="mb-12">
        <span class="inline-block px-4 py-1 bg-guardian-gold/10 text-guardian-gold text-sm font-semibold rounded-full mb-4">Services 07-09</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
          Advisory Services
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl">
          Strategic advisory capabilities that go beyond traditional placement to deliver comprehensive client support.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {advisoryServices.map((service) => (
          <div class="bg-guardian-cream rounded-2xl p-6 border border-guardian-gold/20 flex flex-col">
            <div class="w-10 h-10 bg-guardian-gold/20 rounded-lg flex items-center justify-center text-guardian-gold font-bold mb-4">
              {service.number}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">{service.name}</h3>
            <p class="text-sm text-gray-600 mb-4 leading-relaxed">{service.description}</p>

            <!-- Deliverables -->
            <div class="border-t border-guardian-gold/20 pt-4 mt-auto">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Key Deliverables</p>
              <ul class="space-y-1">
                {service.deliverables.map((item) => (
                  <li class="text-sm text-gray-600 flex items-start gap-2">
                    <span class="w-1 h-1 bg-guardian-gold rounded-full mt-2 flex-shrink-0"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Operational Services -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="mb-12">
        <span class="inline-block px-4 py-1 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Services 10-12</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
          Operational Excellence
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl">
          Supporting services that ensure efficient programme administration and ongoing market connectivity.
        </p>
      </div>

      <div class="space-y-6 max-w-4xl mx-auto">
        {operationalServices.map((service) => (
          <div class="bg-white rounded-2xl p-6 md:p-8 shadow-md flex flex-col md:flex-row gap-6 items-start">
            <div class="flex items-center gap-4 md:flex-col md:items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-xl flex items-center justify-center text-white font-bold text-lg">
                {service.number}
              </div>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{service.name}</h3>
              <p class="text-gray-600 mb-4 leading-relaxed">{service.description}</p>
              <div class="flex flex-wrap gap-2">
                {service.deliverables.map((item) => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm rounded-full">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="section bg-guardian-green text-white">
    <div class="container">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1 bg-white/10 text-guardian-gold text-sm font-semibold rounded-full mb-4">How We Work</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">
          Our Approach
        </h2>
        <p class="text-lg text-white/90 max-w-2xl mx-auto">
          Guardian Re combines technical expertise with a client-centric approach. We invest time in understanding each client's business, risk appetite, and strategic objectives before recommending solutions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {approachPillars.map((pillar) => (
          <div class="text-center">
            <div class="w-14 h-14 mx-auto mb-4 bg-white/10 rounded-xl flex items-center justify-center">
              {pillar.icon === 'academic' && (
                <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                </svg>
              )}
              {pillar.icon === 'users' && (
                <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              )}
              {pillar.icon === 'scale' && (
                <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
                </svg>
              )}
            </div>
            <h3 class="text-lg font-semibold mb-2">{pillar.title}</h3>
            <p class="text-sm text-white/80">{pillar.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-serif font-bold text-gray-900 mb-4">
          Discuss Your Requirements
        </h2>
        <p class="text-gray-600 mb-8">
          To discuss how Guardian Re can support your reinsurance requirements, please contact our team.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn bg-guardian-green text-white hover:bg-guardian-green-dark px-8 py-4 text-lg font-semibold rounded-xl inline-flex items-center justify-center">
            Contact Us
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="tel:+260211258883" class="btn bg-gray-100 text-gray-900 hover:bg-gray-200 px-8 py-4 text-lg font-semibold rounded-xl inline-flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            +260 211 258 883
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
