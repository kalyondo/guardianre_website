---
import BaseLayout from '../layouts/BaseLayout.astro';

// Proportional treaties
const proportionalTreaties = [
  {
    name: 'Quota Share',
    description: 'Under quota share arrangements, the reinsurer assumes a fixed percentage of all risks within the defined portfolio. This approach provides capacity support, stabilises results, and facilitates portfolio growth.',
    features: ['Suitable for new or expanding portfolios', 'Provides consistent capacity across all risks', 'Simplifies administration and reporting']
  },
  {
    name: 'Surplus Share',
    description: 'Surplus treaties allow cedants to retain a fixed amount on each risk and cede the surplus to reinsurers. This structure provides flexibility to manage large individual exposures while retaining smaller risks in full.',
    features: ['Optimal retention of profitable smaller risks', 'Capacity for larger risks as required', 'Balances retention and cession efficiently']
  },
];

// Non-proportional treaties
const nonProportionalTreaties = [
  {
    name: 'Excess of Loss (XOL)',
    description: 'Excess of loss treaties protect cedants against individual losses or accumulations that exceed specified retention levels. Coverage responds only when losses breach the attachment point.',
    features: ['Per-risk excess of loss for individual large losses', 'Per-occurrence excess of loss for event accumulations', 'Aggregate excess of loss for cumulative protection']
  },
  {
    name: 'Stop Loss',
    description: 'Stop loss treaties provide protection when aggregate losses for a portfolio exceed a defined loss ratio or monetary threshold. This structure protects against deterioration in overall underwriting performance.',
    features: ['Protection against adverse experience', 'Capital preservation during difficult periods', 'Supports underwriting planning and budgeting']
  },
];

// Specialty lines
const specialtyLines = [
  {
    name: 'Property',
    icon: 'building',
    coverages: ['Commercial and industrial property', 'Business interruption', 'Assets All Risk programmes', 'Natural catastrophe exposures']
  },
  {
    name: 'Casualty',
    icon: 'shield',
    coverages: ['General liability', 'Professional indemnity', 'Directors and officers liability', 'Product liability']
  },
  {
    name: 'Motor',
    icon: 'car',
    coverages: ['Motor fleet programmes', 'Third-party liability', 'Own damage coverage']
  },
  {
    name: 'Marine & Aviation',
    icon: 'plane',
    coverages: ['Hull and cargo', 'Marine liability', 'Aviation risks']
  },
  {
    name: 'Engineering',
    icon: 'cog',
    coverages: ['Construction all risks', 'Erection all risks', 'Machinery breakdown', 'Electronic equipment']
  },
  {
    name: 'Agriculture',
    icon: 'leaf',
    coverages: ['Crop insurance', 'Livestock coverage', 'Weather index products', 'Agricultural asset protection']
  },
];

// Structured solutions
const structuredSolutions = ['Finite risk programmes', 'Loss portfolio transfers', 'Adverse development covers', 'Capital relief structures'];

// Selection factors
const selectionFactors = [
  'Nature and characteristics of the underlying portfolio',
  'Cedant risk appetite and retention capacity',
  'Capital position and regulatory requirements',
  'Market conditions and pricing environment',
  'Strategic business objectives',
];
---

<BaseLayout title="Reinsurance Products | Guardian Reinsurance Brokers">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black py-20 md:py-28 overflow-hidden">
    <!-- Decorative sun rays -->
    <div class="absolute top-0 right-0 w-96 h-96 opacity-10">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        {[...Array(16)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 22.5) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 22.5) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="2"
          />
        ))}
        <circle cx="100" cy="100" r="30" fill="#CBA875" opacity="0.3"/>
      </svg>
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="hero-animate-badge inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-sm text-white mb-6 backdrop-blur-sm">
          <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
          Comprehensive Risk Transfer Solutions
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-6">
          <span class="hero-animate-heading-1 block">Reinsurance</span>
          <span class="hero-gold-shimmer block">Products</span>
        </h1>

        <p class="hero-animate-subheading text-xl text-white/90 leading-relaxed max-w-2xl mx-auto">
          A comprehensive range of reinsurance products designed to meet the risk transfer requirements of insurers across Africa.
        </p>
      </div>
    </div>
  </section>

  <!-- Product Overview Intro -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-lg text-gray-600 leading-relaxed">
          Guardian Re provides access to a comprehensive range of reinsurance products designed to meet the risk transfer requirements of insurance companies operating in Zambia and across the African market. Our products are structured to provide appropriate protection while supporting efficient capital management.
        </p>
        <div class="w-24 h-1 bg-guardian-gold mx-auto mt-8"></div>
      </div>
    </div>
  </section>

  <!-- Treaty Reinsurance Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-guardian-green text-white text-sm font-semibold rounded-full mb-4">Primary Category</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
          Treaty Reinsurance
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Automatic coverage for defined portfolios of risks, enabling insurers to manage aggregate exposures and stabilise underwriting results.
        </p>
      </div>

      <!-- Proportional Treaties -->
      <div class="mb-16">
        <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-guardian-green/10 rounded-lg flex items-center justify-center">
            <span class="w-2 h-2 bg-guardian-green rounded-full"></span>
          </span>
          Proportional Treaties
        </h3>
        <div class="grid md:grid-cols-2 gap-6">
          {proportionalTreaties.map((treaty) => (
            <div class="bg-white rounded-2xl p-8 shadow-md">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-guardian-green/10 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h4 class="text-xl font-semibold text-gray-900">{treaty.name}</h4>
              </div>
              <p class="text-gray-600 mb-4 leading-relaxed">{treaty.description}</p>
              <ul class="mt-4 space-y-2">
                {treaty.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full flex-shrink-0"></span>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 my-12"></div>

      <!-- Non-Proportional Treaties -->
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-guardian-gold/10 rounded-lg flex items-center justify-center">
            <span class="w-2 h-2 bg-guardian-gold rounded-full"></span>
          </span>
          Non-Proportional Treaties
        </h3>
        <div class="grid md:grid-cols-2 gap-6">
          {nonProportionalTreaties.map((treaty) => (
            <div class="bg-white rounded-2xl p-8 shadow-md">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-guardian-gold/10 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                </div>
                <h4 class="text-xl font-semibold text-gray-900">{treaty.name}</h4>
              </div>
              <p class="text-gray-600 mb-4 leading-relaxed">{treaty.description}</p>
              <ul class="mt-4 space-y-2">
                {treaty.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full flex-shrink-0"></span>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Facultative Reinsurance -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Left Column -->
        <div>
          <span class="inline-block px-4 py-1 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Individual Risk Placement</span>
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-6">
            Facultative Reinsurance
          </h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            Facultative reinsurance provides coverage for individual risks on a case-by-case basis. Each risk is separately offered to and accepted by reinsurers, allowing for tailored terms and conditions.
          </p>

          <!-- Applications Box -->
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Applications</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-guardian-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span class="text-gray-600">Risks exceeding treaty capacity</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-guardian-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span class="text-gray-600">Unusual or complex exposures</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-guardian-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span class="text-gray-600">Risks outside treaty scope or class</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-guardian-green mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span class="text-gray-600">Large single-site concentrations</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Right Column - Process Card -->
        <div class="bg-guardian-cream rounded-2xl p-8 border border-guardian-gold/30">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-guardian-gold/20 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900">Our Process</h3>
          </div>
          <p class="text-gray-600 leading-relaxed mb-6">
            Guardian Re manages the full facultative placement process, from risk presentation through to binding and documentation. We ensure timely responses and competitive terms for each placement.
          </p>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <span class="w-6 h-6 bg-guardian-green text-white rounded-full flex items-center justify-center text-xs font-bold">1</span>
              <span class="text-gray-700">Risk presentation and market submission</span>
            </div>
            <div class="flex items-center gap-3">
              <span class="w-6 h-6 bg-guardian-green text-white rounded-full flex items-center justify-center text-xs font-bold">2</span>
              <span class="text-gray-700">Terms negotiation and quote comparison</span>
            </div>
            <div class="flex items-center gap-3">
              <span class="w-6 h-6 bg-guardian-green text-white rounded-full flex items-center justify-center text-xs font-bold">3</span>
              <span class="text-gray-700">Binding confirmation and documentation</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Specialty Lines Grid -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Lines of Business</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
          Specialty Lines
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Guardian Re arranges reinsurance for specialty and technical lines of business, drawing on specialist resources and market relationships.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {specialtyLines.map((line) => (
          <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="w-12 h-12 bg-guardian-green/10 rounded-xl flex items-center justify-center mb-4">
              {line.icon === 'building' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              )}
              {line.icon === 'shield' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              )}
              {line.icon === 'car' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h8m-8 5h8m-4-9a4 4 0 00-4 4v1H6a2 2 0 00-2 2v6a2 2 0 002 2h1v2a1 1 0 001 1h1a1 1 0 001-1v-2h4v2a1 1 0 001 1h1a1 1 0 001-1v-2h1a2 2 0 002-2v-6a2 2 0 00-2-2h-2V7a4 4 0 00-4-4z"/>
                </svg>
              )}
              {line.icon === 'plane' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                </svg>
              )}
              {line.icon === 'cog' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              )}
              {line.icon === 'leaf' && (
                <svg class="w-6 h-6 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              )}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">{line.name}</h3>
            <ul class="space-y-1">
              {line.coverages.map((coverage) => (
                <li class="text-sm text-gray-600 flex items-center gap-2">
                  <span class="w-1 h-1 bg-guardian-gold rounded-full"></span>
                  {coverage}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Life & Health Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-1 bg-guardian-gold/10 text-guardian-gold text-sm font-semibold rounded-full mb-4">Long-Term Business</span>
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
            Life & Health
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Guardian Re provides reinsurance solutions for life insurers and health underwriters.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 relative">
          <!-- Divider -->
          <div class="hidden md:block absolute left-1/2 top-1/2 -translate-y-1/2 w-px h-32 bg-gray-200"></div>

          <!-- Life Reinsurance -->
          <div class="text-center md:text-left md:pr-8">
            <div class="w-14 h-14 bg-guardian-green/10 rounded-2xl flex items-center justify-center mb-4 mx-auto md:mx-0">
              <svg class="w-7 h-7 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Life Reinsurance</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-green rounded-full"></span>
                Individual life coverage
              </li>
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-green rounded-full"></span>
                Group life schemes
              </li>
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-green rounded-full"></span>
                Credit life programmes
              </li>
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-green rounded-full"></span>
                Mortality and morbidity risk transfer
              </li>
            </ul>
          </div>

          <!-- Health Reinsurance -->
          <div class="text-center md:text-left md:pl-8">
            <div class="w-14 h-14 bg-guardian-gold/10 rounded-2xl flex items-center justify-center mb-4 mx-auto md:mx-0">
              <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Health Reinsurance</h3>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full"></span>
                Medical expenses reinsurance
              </li>
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full"></span>
                Aggregate stop loss
              </li>
              <li class="flex items-center gap-2 justify-center md:justify-start">
                <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full"></span>
                Catastrophic illness coverage
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Structured Solutions -->
  <section class="section bg-guardian-green text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-1 bg-white/10 text-guardian-gold text-sm font-semibold rounded-full mb-4">Bespoke Arrangements</span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-6">
          Structured Solutions
        </h2>
        <p class="text-lg text-white/90 mb-8 leading-relaxed">
          For clients with specific capital or risk management objectives, Guardian Re develops structured reinsurance solutions tailored to their requirements.
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          {structuredSolutions.map((solution) => (
            <span class="px-4 py-2 bg-white/10 rounded-full text-sm">
              {solution}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Product Selection Guidance -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl p-8 shadow-lg border-l-4 border-guardian-gold">
          <div class="flex items-start gap-4 mb-6">
            <div class="w-12 h-12 bg-guardian-gold/10 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
