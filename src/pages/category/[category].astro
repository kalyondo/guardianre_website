---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const categories = [...new Set(posts.flatMap((post) => post.data.categories || []))];

  return categories.map((category) => ({
    params: { category },
    props: {
      category,
      posts: posts.filter((post) => post.data.categories?.includes(category)),
    },
  }));
}

const { category, posts } = Astro.props;
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const categoryName = category.replace(/-/g, ' ');

// Get all categories for filter
const allPosts = await getCollection('posts');
const allCategories = [...new Set(allPosts.flatMap((post) => post.data.categories || []))];

// Format date helper
const formatDate = (date: string) => new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title={`${categoryName} - Category`}
  description={`Browse all posts in the ${categoryName} category.`}
>
  <!-- Hero Section - Editorial Style -->
  <section class="relative min-h-[40vh] md:min-h-[45vh] overflow-hidden bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black">
    <!-- Animated geometric pattern background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full">
        {[...Array(5)].map((_, i) => (
          <div
            class="absolute border border-guardian-gold/30 rounded-full animate-pulse-slow"
            style={`
              width: ${120 + i * 80}px;
              height: ${120 + i * 80}px;
              top: 50%;
              left: 30%;
              transform: translate(-50%, -50%);
              animation-delay: ${i * 0.2}s;
            `}
          />
        ))}
      </div>
    </div>

    <!-- Diagonal gold accent line -->
    <div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-guardian-gold to-transparent opacity-30"></div>

    <!-- Content -->
    <div class="relative z-10 container px-4 md:px-6 py-16 md:py-20">
      <div class="max-w-3xl">
        <!-- Animated badge -->
        <div class="hero-badge inline-flex items-center gap-2 px-4 py-2 bg-guardian-gold/20 rounded-full text-sm mb-6 backdrop-blur-sm border border-guardian-gold/30">
          <svg class="w-4 h-4 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          <span class="text-guardian-gold font-medium">Category</span>
        </div>

        <!-- Main heading -->
        <h1 class="hero-title text-4xl sm:text-5xl lg:text-6xl font-serif font-bold leading-[1.1] mb-4 text-white capitalize">
          {categoryName}
        </h1>

        <!-- Article count -->
        <p class="hero-subtitle text-xl text-white/70">
          {sortedPosts.length} article{sortedPosts.length !== 1 ? 's' : ''} in this category
        </p>
      </div>
    </div>

    <!-- Bottom wave decoration -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-12 md:h-16" viewBox="0 0 1440 54" fill="none" preserveAspectRatio="none">
        <path d="M0 22L60 27.3C120 32.7 240 43.3 360 43.3C480 43.3 600 32.7 720 27.3C840 22 960 22 1080 26.8C1200 32.7 1320 43.3 1380 48.7L1440 54V54H1380C1320 54 1200 54 1080 54C960 54 840 54 720 54C600 54 480 54 360 54C240 54 120 54 60 54H0V22Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Categories Filter - Sticky -->
  <section class="sticky top-[72px] z-40 bg-white/95 backdrop-blur-md border-b border-gray-100 py-4 no-print shadow-sm">
    <div class="container px-4 md:px-6">
      <div class="flex items-center gap-3 overflow-x-auto pb-2 -mb-2 scrollbar-hide">
        <span class="text-sm text-gray-500 font-medium whitespace-nowrap hidden sm:block">Filter:</span>
        <a
          href="/insights"
          class="filter-pill px-5 py-2.5 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-guardian-gold/20 hover:text-guardian-green whitespace-nowrap transition-all duration-300 border border-transparent hover:border-guardian-gold/30"
        >
          All Posts
        </a>
        {allCategories.map((cat, index) => (
          <a
            href={`/category/${cat}`}
            class:list={[
              "filter-pill px-5 py-2.5 rounded-full text-sm font-semibold whitespace-nowrap capitalize transition-all duration-300",
              cat === category
                ? "bg-guardian-green text-white hover:shadow-lg hover:shadow-guardian-green/20"
                : "bg-gray-100 text-gray-700 hover:bg-guardian-gold/20 hover:text-guardian-green border border-transparent hover:border-guardian-gold/30"
            ]}
            style={`animation-delay: ${index * 0.05}s`}
          >
            {cat.replace(/-/g, ' ')}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Posts Grid Section -->
  <section class="py-12 md:py-16 bg-gray-50">
    <div class="container px-4 md:px-6">
      {sortedPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post, index) => (
            <article
              class="post-card group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl border border-gray-100 transition-all duration-500 hover:-translate-y-2"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <a href={`/insights/${post.slug}`} class="block">
                <!-- Image -->
                <div class="relative aspect-[16/10] overflow-hidden">
                  <img
                    src={post.data.featuredImage || '/images/placeholder-post.jpg'}
                    alt={post.data.featuredImageAlt || post.data.title}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy"
                  />
                  <!-- Hover overlay -->
                  <div class="absolute inset-0 bg-guardian-green/0 group-hover:bg-guardian-green/10 transition-colors duration-500"></div>

                  <!-- Gold accent line on hover -->
                  <div class="absolute bottom-0 left-0 right-0 h-1 bg-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
                </div>

                <!-- Content -->
                <div class="p-6">
                  <!-- Categories -->
                  {post.data.categories && post.data.categories.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-3">
                      {post.data.categories.slice(0, 1).map((cat: string) => (
                        <span class="px-3 py-1 bg-guardian-green/10 text-guardian-green text-xs font-semibold rounded-full capitalize">
                          {cat.replace(/-/g, ' ')}
                        </span>
                      ))}
                    </div>
                  )}

                  <!-- Title -->
                  <h3 class="text-xl font-serif font-bold text-gray-900 mb-3 leading-tight group-hover:text-guardian-green transition-colors duration-300 line-clamp-2">
                    {post.data.title}
                  </h3>

                  <!-- Excerpt -->
                  {post.data.excerpt && (
                    <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-2">
                      {post.data.excerpt}
                    </p>
                  )}

                  <!-- Meta -->
                  <div class="flex items-center justify-between text-sm text-gray-500 pt-4 border-t border-gray-100">
                    <time datetime={post.data.date} class="flex items-center gap-1.5">
                      <svg class="w-4 h-4 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      {formatDate(post.data.date)}
                    </time>
                    <span class="flex items-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      {post.data.readingTime || 3} min
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-20 bg-white rounded-2xl border border-gray-100">
          <div class="w-20 h-20 mx-auto mb-6 bg-gray-100 rounded-2xl flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 mb-3">No posts yet</h2>
          <p class="text-gray-600 max-w-md mx-auto mb-6">No articles found in this category.</p>
          <a href="/insights" class="inline-flex items-center gap-2 px-6 py-3 bg-guardian-green text-white font-semibold rounded-xl hover:bg-guardian-green-dark transition-all duration-300">
            View All Posts
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Back to Insights CTA -->
  <section class="py-12 bg-white border-t border-gray-100">
    <div class="container px-4 md:px-6 text-center">
      <a href="/insights" class="inline-flex items-center gap-2 text-guardian-green font-semibold hover:gap-3 transition-all duration-300">
        <svg class="w-5 h-5 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
        Back to All Insights
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Custom animations */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.1; transform: translate(-50%, -50%) scale(1.05); }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .hero-badge {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  .hero-title {
    animation: fade-in-up 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  .hero-subtitle {
    animation: fade-in-up 0.8s ease-out 0.4s forwards;
    opacity: 0;
  }

  .filter-pill {
    animation: fade-in-up 0.5s ease-out forwards;
    opacity: 0;
  }

  .post-card {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
