---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <section class="section py-20 md:py-32">
    <div class="container text-center">
      <!-- 404 illustration -->
      <div class="mb-8">
        <span class="text-9xl md:text-[12rem] font-bold font-display gradient-text">404</span>
      </div>

      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Page Not Found
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-lg mx-auto">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Back to Home
        </a>
        <a href="/search" class="btn-secondary">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Search Site
        </a>
      </div>

      <!-- Helpful links -->
      <div class="mt-16 pt-12 border-t border-gray-200 dark:border-gray-800">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">
          You might be looking for:
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
          <a
            href="/our-heritage"
            class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group"
          >
            <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-guardian-primary dark:group-hover:text-guardian-accent">
              Our Heritage
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Learn about our company</p>
          </a>
          <a
            href="/expertise"
            class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group"
          >
            <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-guardian-primary dark:group-hover:text-guardian-accent">
              Expertise
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Our reinsurance services</p>
          </a>
          <a
            href="/blog"
            class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group"
          >
            <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-guardian-primary dark:group-hover:text-guardian-accent">
              Insights
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Latest updates</p>
          </a>
          <a
            href="/connect"
            class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors group"
          >
            <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-guardian-primary dark:group-hover:text-guardian-accent">
              Connect
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Get in touch</p>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
