---
import BaseLayout from '../layouts/BaseLayout.astro';

// Guardian Re Services (12 Strategic Areas from Company Profile)
const services = [
  { name: 'Catastrophe Management', description: 'Expert handling of catastrophic risk exposures and disaster response planning.' },
  { name: 'Analytics, Products & Solutions', description: 'Data-driven insights and actuarial analysis to optimize your portfolio performance.' },
  { name: 'Life & Health Reinsurance', description: 'Comprehensive life and health reinsurance solutions for sustainable growth.' },
  { name: 'Reinsurance & Portfolio Optimization', description: 'Strategic portfolio balancing to maximize returns and minimize exposure.' },
  { name: 'Peer Analysis/Benchmarking', description: 'Competitive benchmarking and market position analysis within your sector.' },
  { name: 'Reinsurance Security Analysis', description: 'Thorough assessment of reinsurer financial strength and creditworthiness.' },
  { name: 'Rating Advisory', description: 'Expert guidance on maintaining and improving your credit ratings.' },
  { name: 'Reinsurance Structuring', description: 'Custom reinsurance program design tailored to your specific needs.' },
  { name: 'Market Intelligence', description: 'Real-time market trends and insights from global reinsurance markets.' },
  { name: 'Negotiation & Placement', description: 'Skilled negotiation to secure the best terms and conditions.' },
  { name: 'Policy Administration', description: 'Comprehensive policy management and documentation services.' },
  { name: 'Run-off Management', description: 'Professional management of legacy portfolios and discontinued lines.' },
];

// Partnership Benefits (from Company Profile)
const partnershipBenefits = [
  { title: '70+ Years Experience', description: 'Benefits emanating from over 70 years of combined reinsurance broking experience through our strategic partnerships.', icon: 'clock' },
  { title: 'Global Market Access', description: 'Access to global reinsurance markets through our reinsurance network in leading global markets.', icon: 'globe' },
  { title: 'Cutting-Edge Tools', description: 'Access to cutting-edge reinsurance modelling tools enabling us to provide bespoke reinsurance solutions.', icon: 'chart' },
  { title: 'Specialist Resources', description: 'Access to specialist resources such as Actuarial, Life & Health, Engineering and Agronomy services.', icon: 'users' },
  { title: 'Business Intelligence', description: 'Robust and integrated reinsurance broking system with business intelligence tools.', icon: 'database' },
];

// ERIT Core Values
const values = [
  { letter: 'E', name: 'Excellence', description: 'Delivering world-class service in everything we do.' },
  { letter: 'R', name: 'Reliability', description: 'Dependable partners you can count on, always.' },
  { letter: 'I', name: 'Innovativeness', description: 'Creative solutions for complex challenges.' },
  { letter: 'T', name: 'Teamwork', description: 'Collaborative approach for collective success.' },
];

// Key stats
const stats = [
  { value: '$700M+', label: 'Assets Protected (2024)' },
  { value: '70+', label: 'Years Combined Experience' },
  { value: '12', label: 'Strategic Services' },
  { value: '1st', label: 'In Zambia' },
];

// Featured Insights
const featuredInsights = [
  {
    title: 'A Message of Appreciation as We Close the Year',
    excerpt: 'Guardian Re extends heartfelt appreciation to clients, partners, and stakeholders as we reflect on a year of shared achievements.',
    image: '/images/insights/seasons-greetings-2025.jpg',
    date: 'December 20, 2025',
    slug: 'message-of-appreciation-closing-year-2025',
  },
  {
    title: 'Driving Innovation and Resilience at the IAZ Conference 2025',
    excerpt: 'Guardian Re joined industry leaders to explore how automation, AI, and strategic resilience are shaping insurance in Zambia.',
    image: '/images/insights/iaz-conference-2025.jpg',
    date: 'September 1, 2025',
    slug: 'driving-innovation-resilience-iaz-conference-2025',
  },
  {
    title: 'Supporting Risk Awareness and Protecting Over USD 700 Million in Assets',
    excerpt: 'Guardian Re\'s \'Are You Covered?\' initiative highlights comprehensive risk protection across the region.',
    image: '/images/insights/risk-awareness-700m.png',
    date: 'May 1, 2025',
    slug: 'supporting-risk-awareness-protecting-700-million-assets',
  },
];
---

<BaseLayout title="Zambia's First Reinsurance Broker | Guardian Re">
  <!-- Hero Section - Split Image Design (PRESERVED EXACTLY) -->
  <section class="relative min-h-[90vh] lg:min-h-screen overflow-hidden">
    <!-- Background split -->
    <div class="absolute inset-0 flex">
      <!-- Left side - Green gradient -->
      <div class="w-full lg:w-1/2 bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black"></div>
      <!-- Right side - Image (hidden on mobile, visible on lg) -->
      <div class="hidden lg:block w-1/2 relative">
        <img
          src="/images/hero-professional.jpg"
          alt="African business professionals"
          class="absolute inset-0 w-full h-full object-cover"
        />
        <!-- Overlay gradient for blend -->
        <div class="absolute inset-0 bg-gradient-to-r from-guardian-green-dark via-guardian-green-dark/60 to-transparent"></div>
        <!-- Gold accent line with draw animation -->
        <div class="hero-gold-line absolute left-0 top-1/4 bottom-1/4 w-1 bg-gradient-to-b from-transparent via-guardian-gold to-transparent"></div>
      </div>
    </div>

    <!-- Mobile background image -->
    <div class="lg:hidden absolute inset-0">
      <img
        src="/images/hero-professional.jpg"
        alt="African business professionals"
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-guardian-green-dark/90 via-guardian-green-dark/80 to-guardian-black/90"></div>
    </div>

    <!-- Sun rays decorative element - with subtle rotation -->
    <div class="absolute top-1/2 left-1/4 w-[500px] h-[500px] opacity-10 pointer-events-none hero-sun-rays" style="transform: translate(-50%, -50%);">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        {[...Array(12)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 30) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 30) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="1.5"
          />
        ))}
        <circle cx="100" cy="100" r="25" fill="#CBA875" opacity="0.2"/>
      </svg>
    </div>

    <!-- Content -->
    <div class="relative z-10 min-h-[90vh] lg:min-h-screen flex items-center">
      <div class="container px-4 md:px-6">
        <div class="max-w-2xl py-20 lg:py-0">
          <!-- Badge -->
          <div class="hero-animate-badge inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-sm mb-6 backdrop-blur-sm border border-white/10">
            <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
            <span class="text-white/90">Over 19 Years' Experience | 20th Anniversary 2026</span>
          </div>

          <!-- Heading -->
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-serif font-bold leading-[1.1] mb-6 text-white">
            <span class="hero-animate-heading-1 block">Zambia's First</span>
            <span class="hero-gold-shimmer block mt-2">Reinsurance Broker</span>
          </h1>

          <!-- Subheading -->
          <p class="hero-animate-subheading text-xl sm:text-2xl text-white/90 mb-6 font-light leading-relaxed">
            Providing world-class and ethical reinsurance services to the African market for over 19 years.
          </p>

          <!-- Partner mention -->
          <p class="hero-animate-partner text-lg text-white/70 mb-8 leading-relaxed mt-2">
            As proud partners of <a href="https://www.minerva.co.zw/" target="_blank" rel="noopener noreferrer" class="text-guardian-gold font-semibold hover:underline">Minerva Re</a>, we deliver innovative risk management solutions backed by global expertise and local understanding.
          </p>

          <!-- CTA Buttons -->
          <div class="hero-animate-cta flex flex-col sm:flex-row gap-4">
            <a href="/expertise" class="group bg-guardian-gold text-guardian-black hover:bg-guardian-gold-light px-8 py-4 text-lg font-semibold rounded-xl inline-flex items-center justify-center transition-all duration-300 hover:shadow-lg hover:shadow-guardian-gold/30 hover:-translate-y-0.5 min-h-[56px]">
              Our Services
              <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/connect" class="bg-white/10 text-white border border-white/30 hover:bg-white/20 hover:-translate-y-0.5 backdrop-blur-sm px-8 py-4 text-lg font-medium rounded-xl inline-flex items-center justify-center transition-all duration-300 min-h-[56px]">
              Get a Quote
            </a>
          </div>

          <!-- Trust indicators -->
          <div class="hero-border-animate flex items-center gap-6 mt-10 pt-8">
            <div class="hero-trust-item-1 flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">PIA Licensed</span>
            </div>
            <div class="hero-trust-item-2 flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">Minerva Re Partner</span>
            </div>
            <div class="hero-trust-item-3 hidden sm:flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">$700M+ Protected</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-16 sm:bottom-20 left-1/2 -translate-x-1/2 animate-bounce z-10">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Stats Section - REDESIGNED with animations -->
  <section class="relative -mt-6 sm:-mt-8 z-20 px-4">
    <div class="container">
      <div class="stats-card max-w-5xl mx-auto bg-white rounded-2xl shadow-2xl border border-gray-100 p-6 sm:p-8 md:p-10 overflow-hidden relative">
        <!-- Subtle pattern background -->
        <div class="absolute inset-0 opacity-[0.02]">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, #1B5E4B 1px, transparent 0); background-size: 40px 40px;"></div>
        </div>

        <div class="relative grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8">
          {stats.map((stat, index) => (
            <div
              class="stat-item text-center p-2 sm:p-4 group"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold text-guardian-green mb-2 relative inline-block">
                {stat.value}
                <!-- Gold underline accent -->
                <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-guardian-gold group-hover:w-full transition-all duration-500"></div>
              </div>
              <div class="text-xs sm:text-sm text-gray-500 uppercase tracking-wider leading-tight font-medium">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision Section - REDESIGNED with split animations -->
  <section class="section bg-white pt-20 sm:pt-24 px-4 md:px-0 overflow-hidden">
    <div class="container">
      <div class="section-header text-center mb-10 sm:mb-14">
        <span class="inline-block px-4 py-2 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Our Purpose</span>
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
          Mission & <span class="section-gold-text">Vision</span>
        </h2>
        <div class="w-20 h-1 bg-gradient-to-r from-guardian-green to-guardian-gold mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-6 sm:gap-8 max-w-5xl mx-auto">
        <!-- Mission -->
        <div class="mission-card group bg-gradient-to-br from-white to-gray-50 rounded-2xl p-6 sm:p-8 border border-gray-100 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 relative overflow-hidden">
          <!-- Decorative corner -->
          <div class="absolute top-0 right-0 w-20 h-20 bg-guardian-green/5 rounded-bl-[80px]"></div>

          <div class="relative">
            <div class="w-16 h-16 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-2xl flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-serif font-bold text-gray-900 mb-4">Our Mission</h3>
            <blockquote class="relative">
              <svg class="absolute -top-2 -left-2 w-8 h-8 text-guardian-gold/30" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
              <p class="text-lg text-gray-600 italic leading-relaxed pl-6">
                "To provide world-class and ethical reinsurance services to the African Market."
              </p>
            </blockquote>
          </div>

          <!-- Bottom gold accent -->
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-guardian-green transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
        </div>

        <!-- Vision -->
        <div class="vision-card group bg-gradient-to-br from-white to-gray-50 rounded-2xl p-6 sm:p-8 border border-gray-100 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 relative overflow-hidden">
          <!-- Decorative corner -->
          <div class="absolute top-0 right-0 w-20 h-20 bg-guardian-gold/5 rounded-bl-[80px]"></div>

          <div class="relative">
            <div class="w-16 h-16 bg-gradient-to-br from-guardian-gold to-guardian-gold-light rounded-2xl flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-guardian-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-serif font-bold text-gray-900 mb-4">Our Vision</h3>
            <blockquote class="relative">
              <svg class="absolute -top-2 -left-2 w-8 h-8 text-guardian-gold/30" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
              <p class="text-lg text-gray-600 italic leading-relaxed pl-6">
                "Provision of leading and dependable re-insurance broking and risk management innovations."
              </p>
            </blockquote>
          </div>

          <!-- Bottom gold accent -->
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values (ERIT) Section - PRESERVED EXACTLY -->
  <section class="section bg-gray-50 px-4 md:px-0">
    <div class="container">
      <div class="text-center mb-8 sm:mb-12">
        <span class="inline-block px-3 sm:px-4 py-1.5 bg-guardian-gold/10 text-guardian-gold text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">Core Values</span>
        <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">
          The ERIT Principles
        </h2>
        <p class="text-lg sm:text-lg text-gray-600 max-w-2xl mx-auto">
          Our values guide every decision we make and every relationship we build.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 max-w-6xl mx-auto">
        {values.map((value) => (
          <div class="group relative bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-xl sm:rounded-2xl p-4 sm:p-8 text-white overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <!-- Large letter background -->
            <div class="absolute -top-2 sm:-top-4 -right-2 sm:-right-4 text-[60px] sm:text-[120px] font-serif font-bold text-white/10 leading-none select-none">
              {value.letter}
            </div>

            <div class="relative z-10">
              <div class="w-10 sm:w-12 h-10 sm:h-12 bg-guardian-gold rounded-lg sm:rounded-xl flex items-center justify-center mb-3 sm:mb-4 text-guardian-black font-serif font-bold text-lg sm:text-xl">
                {value.letter}
              </div>
              <h3 class="text-lg sm:text-xl font-serif font-bold mb-1 sm:mb-2">{value.name}</h3>
              <p class="text-white/80 text-sm sm:text-sm leading-relaxed">{value.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Partnership Benefits Section - REDESIGNED with staggered animations -->
  <section class="section bg-white px-4 md:px-0 overflow-hidden">
    <div class="container">
      <div class="section-header text-center mb-10 sm:mb-14">
        <span class="inline-block px-4 py-2 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Strategic Partnerships</span>
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
          The Benefits <span class="section-gold-text">We Bring</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Our partnerships bring exceptional value to our clients through combined expertise and global reach.
        </p>
        <div class="w-20 h-1 bg-gradient-to-r from-guardian-green to-guardian-gold mx-auto rounded-full mt-6"></div>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {partnershipBenefits.map((benefit, index) => (
          <div
            class="benefit-card group bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 relative overflow-hidden"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <!-- Top gradient line -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-guardian-green via-guardian-gold to-guardian-green"></div>

            <div class="flex items-start gap-4">
              <div class="w-14 h-14 bg-gradient-to-br from-guardian-gold/20 to-guardian-gold/5 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-500">
                {benefit.icon === 'clock' && (
                  <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {benefit.icon === 'globe' && (
                  <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {benefit.icon === 'chart' && (
                  <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                )}
                {benefit.icon === 'users' && (
                  <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                )}
                {benefit.icon === 'database' && (
                  <svg class="w-7 h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                  </svg>
                )}
              </div>
              <div class="min-w-0">
                <h3 class="text-lg font-serif font-bold text-gray-900 mb-2 group-hover:text-guardian-green transition-colors">{benefit.title}</h3>
                <p class="text-sm text-gray-600 leading-relaxed">{benefit.description}</p>
              </div>
            </div>

            <!-- Bottom hover accent -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          </div>
        ))}
      </div>

