---
import BaseLayout from '../layouts/BaseLayout.astro';

// Guardian Re Services (12 Strategic Areas from Company Profile)
const services = [
  { name: 'Catastrophe Management', description: 'Expert handling of catastrophic risk exposures and disaster response planning.' },
  { name: 'Analytics, Products & Solutions', description: 'Data-driven insights and actuarial analysis to optimize your portfolio performance.' },
  { name: 'Life & Health Reinsurance', description: 'Comprehensive life and health reinsurance solutions for sustainable growth.' },
  { name: 'Reinsurance & Portfolio Optimization', description: 'Strategic portfolio balancing to maximize returns and minimize exposure.' },
  { name: 'Peer Analysis/Benchmarking', description: 'Competitive benchmarking and market position analysis within your sector.' },
  { name: 'Reinsurance Security Analysis', description: 'Thorough assessment of reinsurer financial strength and creditworthiness.' },
  { name: 'Rating Advisory', description: 'Expert guidance on maintaining and improving your credit ratings.' },
  { name: 'Reinsurance Structuring', description: 'Custom reinsurance program design tailored to your specific needs.' },
  { name: 'Market Intelligence', description: 'Real-time market trends and insights from global reinsurance markets.' },
  { name: 'Negotiation & Placement', description: 'Skilled negotiation to secure the best terms and conditions.' },
  { name: 'Policy Administration', description: 'Comprehensive policy management and documentation services.' },
  { name: 'Run-off Management', description: 'Professional management of legacy portfolios and discontinued lines.' },
];

// Partnership Benefits (from Company Profile)
const partnershipBenefits = [
  { title: '70+ Years Experience', description: 'Benefits emanating from over 70 years of combined reinsurance broking experience through our strategic partnerships.', icon: 'clock' },
  { title: 'Global Market Access', description: 'Access to global reinsurance markets through our reinsurance network in leading global markets.', icon: 'globe' },
  { title: 'Cutting-Edge Tools', description: 'Access to cutting-edge reinsurance modelling tools enabling us to provide bespoke reinsurance solutions.', icon: 'chart' },
  { title: 'Specialist Resources', description: 'Access to specialist resources such as Actuarial, Life & Health, Engineering and Agronomy services.', icon: 'users' },
  { title: 'Business Intelligence', description: 'Robust and integrated reinsurance broking system with business intelligence tools.', icon: 'database' },
];

// ERIT Core Values
const values = [
  { letter: 'E', name: 'Excellence', description: 'Delivering world-class service in everything we do.' },
  { letter: 'R', name: 'Reliability', description: 'Dependable partners you can count on, always.' },
  { letter: 'I', name: 'Innovativeness', description: 'Creative solutions for complex challenges.' },
  { letter: 'T', name: 'Teamwork', description: 'Collaborative approach for collective success.' },
];

// Key stats
const stats = [
  { value: '$700M+', label: 'Assets Protected (2024)' },
  { value: '70+', label: 'Years Combined Experience' },
  { value: '12', label: 'Strategic Services' },
  { value: '1st', label: 'In Zambia' },
];
---

<BaseLayout title="Zambia's First Reinsurance Broker | Guardian Re">
  <!-- Hero Section - Split Image Design -->
  <section class="relative min-h-[90vh] lg:min-h-screen overflow-hidden">
    <!-- Background split -->
    <div class="absolute inset-0 flex">
      <!-- Left side - Green gradient -->
      <div class="w-full lg:w-1/2 bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black"></div>
      <!-- Right side - Image (hidden on mobile, visible on lg) -->
      <div class="hidden lg:block w-1/2 relative">
        <img
          src="/images/hero-professional.jpg"
          alt="African business professionals"
          class="absolute inset-0 w-full h-full object-cover"
        />
        <!-- Overlay gradient for blend -->
        <div class="absolute inset-0 bg-gradient-to-r from-guardian-green-dark via-guardian-green-dark/60 to-transparent"></div>
        <!-- Gold accent line with draw animation -->
        <div class="hero-gold-line absolute left-0 top-1/4 bottom-1/4 w-1 bg-gradient-to-b from-transparent via-guardian-gold to-transparent"></div>
      </div>
    </div>

    <!-- Mobile background image -->
    <div class="lg:hidden absolute inset-0">
      <img
        src="/images/hero-professional.jpg"
        alt="African business professionals"
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-guardian-green-dark/90 via-guardian-green-dark/80 to-guardian-black/90"></div>
    </div>

    <!-- Sun rays decorative element - with subtle rotation -->
    <div class="absolute top-1/2 left-1/4 w-[500px] h-[500px] opacity-10 pointer-events-none hero-sun-rays" style="transform: translate(-50%, -50%);">
      <svg viewBox="0 0 200 200" class="w-full h-full">
        {[...Array(12)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 30) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 30) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="1.5"
          />
        ))}
        <circle cx="100" cy="100" r="25" fill="#CBA875" opacity="0.2"/>
      </svg>
    </div>

    <!-- Content -->
    <div class="relative z-10 min-h-[90vh] lg:min-h-screen flex items-center">
      <div class="container px-4 md:px-6">
        <div class="max-w-2xl py-20 lg:py-0">
          <!-- Badge -->
          <div class="hero-animate-badge inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-sm mb-6 backdrop-blur-sm border border-white/10">
            <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
            <span class="text-white/90">Established 2006 | Licensed Reinsurance Broker</span>
          </div>

          <!-- Heading -->
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-serif font-bold leading-[1.1] mb-6 text-white">
            <span class="hero-animate-heading-1 block">Zambia's First</span>
            <span class="hero-gold-shimmer block mt-2">Reinsurance Broker</span>
          </h1>

          <!-- Subheading -->
          <p class="hero-animate-subheading text-xl sm:text-2xl text-white/90 mb-4 font-light leading-relaxed">
            Providing world-class and ethical reinsurance services to the African market for over 18 years.
          </p>

          <!-- Partner mention -->
          <p class="hero-animate-partner text-lg text-white/70 mb-8 leading-relaxed">
            As proud partners of <a href="https://www.minerva.co.zw/" target="_blank" rel="noopener noreferrer" class="text-guardian-gold font-semibold hover:underline">Minerva Re</a>, we deliver innovative risk management solutions backed by global expertise and local understanding.
          </p>

          <!-- CTA Buttons -->
          <div class="hero-animate-cta flex flex-col sm:flex-row gap-4">
            <a href="/our-services" class="group bg-guardian-gold text-guardian-black hover:bg-guardian-gold-light px-8 py-4 text-lg font-semibold rounded-xl inline-flex items-center justify-center transition-all duration-300 hover:shadow-lg hover:shadow-guardian-gold/30 hover:-translate-y-0.5 min-h-[56px]">
              Our Services
              <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/contact" class="bg-white/10 text-white border border-white/30 hover:bg-white/20 hover:-translate-y-0.5 backdrop-blur-sm px-8 py-4 text-lg font-medium rounded-xl inline-flex items-center justify-center transition-all duration-300 min-h-[56px]">
              Get a Quote
            </a>
          </div>

          <!-- Trust indicators -->
          <div class="hero-border-animate flex items-center gap-6 mt-10 pt-8">
            <div class="hero-trust-item-1 flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">PIA Licensed</span>
            </div>
            <div class="hero-trust-item-2 flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">Minerva Re Partner</span>
            </div>
            <div class="hero-trust-item-3 hidden sm:flex items-center gap-2">
              <svg class="w-5 h-5 text-guardian-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white/80 text-sm">$700M+ Protected</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce z-10">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="relative -mt-6 sm:-mt-8 z-20 px-4">
    <div class="container">
      <div class="max-w-5xl mx-auto bg-white rounded-xl sm:rounded-2xl shadow-2xl p-4 sm:p-6 md:p-10">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 md:gap-8">
          {stats.map((stat) => (
            <div class="text-center p-2 sm:p-0">
              <div class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-guardian-green mb-1">{stat.value}</div>
              <div class="text-xs sm:text-sm md:text-sm text-gray-500 uppercase tracking-wider leading-tight">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision Section -->
  <section class="section bg-white pt-16 sm:pt-20 px-4 md:px-0">
    <div class="container">
      <div class="text-center mb-8 sm:mb-12">
        <span class="inline-block px-3 sm:px-4 py-1.5 bg-guardian-green/10 text-guardian-green text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">Our Purpose</span>
        <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">
          Mission & Vision
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-4 sm:gap-8 max-w-5xl mx-auto">
        <!-- Mission -->
        <div class="bg-gray-50 rounded-xl sm:rounded-2xl p-5 sm:p-8 border-t-4 border-guardian-green">
          <div class="w-12 sm:w-14 h-12 sm:h-14 bg-guardian-green/10 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6">
            <svg class="w-6 sm:w-7 h-6 sm:h-7 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl sm:text-xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">Our Mission</h3>
          <p class="text-lg sm:text-lg text-gray-600 italic leading-relaxed">
            "To provide world-class and ethical reinsurance services to the African Market."
          </p>
        </div>

        <!-- Vision -->
        <div class="bg-gray-50 rounded-xl sm:rounded-2xl p-5 sm:p-8 border-t-4 border-guardian-gold">
          <div class="w-12 sm:w-14 h-12 sm:h-14 bg-guardian-gold/10 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-6">
            <svg class="w-6 sm:w-7 h-6 sm:h-7 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <h3 class="text-xl sm:text-xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">Our Vision</h3>
          <p class="text-lg sm:text-lg text-gray-600 italic leading-relaxed">
            "Provision of leading and dependable re-insurance broking and risk management innovations."
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values (ERIT) Section -->
  <section class="section bg-gray-50 px-4 md:px-0">
    <div class="container">
      <div class="text-center mb-8 sm:mb-12">
        <span class="inline-block px-3 sm:px-4 py-1.5 bg-guardian-gold/10 text-guardian-gold text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">Core Values</span>
        <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">
          The ERIT Principles
        </h2>
        <p class="text-lg sm:text-lg text-gray-600 max-w-2xl mx-auto">
          Our values guide every decision we make and every relationship we build.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 max-w-6xl mx-auto">
        {values.map((value) => (
          <div class="group relative bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-xl sm:rounded-2xl p-4 sm:p-8 text-white overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <!-- Large letter background -->
            <div class="absolute -top-2 sm:-top-4 -right-2 sm:-right-4 text-[60px] sm:text-[120px] font-serif font-bold text-white/10 leading-none select-none">
              {value.letter}
            </div>

            <div class="relative z-10">
              <div class="w-10 sm:w-12 h-10 sm:h-12 bg-guardian-gold rounded-lg sm:rounded-xl flex items-center justify-center mb-3 sm:mb-4 text-guardian-black font-serif font-bold text-lg sm:text-xl">
                {value.letter}
              </div>
              <h3 class="text-lg sm:text-xl font-serif font-bold mb-1 sm:mb-2">{value.name}</h3>
              <p class="text-white/80 text-sm sm:text-sm leading-relaxed">{value.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Partnership Benefits Section -->
  <section class="section bg-white px-4 md:px-0">
    <div class="container">
      <div class="text-center mb-8 sm:mb-12">
        <span class="inline-block px-3 sm:px-4 py-1.5 bg-guardian-green/10 text-guardian-green text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">Strategic Partnerships</span>
        <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">
          The Benefits We Bring
        </h2>
        <p class="text-lg sm:text-lg text-gray-600 max-w-3xl mx-auto">
          Our partnerships bring exceptional value to our clients through combined expertise and global reach.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 max-w-6xl mx-auto">
        {partnershipBenefits.map((benefit, index) => (
          <div class="bg-gray-50 rounded-xl sm:rounded-2xl p-4 sm:p-6 hover:shadow-lg transition-all duration-300 border-l-4 border-guardian-gold">
            <div class="flex items-start gap-3 sm:gap-4">
              <div class="w-10 sm:w-12 h-10 sm:h-12 bg-guardian-gold/20 rounded-lg sm:rounded-xl flex items-center justify-center flex-shrink-0">
                {benefit.icon === 'clock' && (
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {benefit.icon === 'globe' && (
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {benefit.icon === 'chart' && (
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                )}
                {benefit.icon === 'users' && (
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                )}
                {benefit.icon === 'database' && (
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                  </svg>
                )}
              </div>
              <div class="min-w-0">
                <h3 class="text-lg sm:text-lg font-semibold text-gray-900 mb-1 sm:mb-2">{benefit.title}</h3>
                <p class="text-sm sm:text-sm text-gray-600 leading-relaxed">{benefit.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-8 sm:mt-10">
        <a href="/partnerships" class="btn bg-white text-guardian-green border-2 border-guardian-green hover:bg-guardian-green hover:text-white px-5 sm:px-6 py-3 rounded-xl inline-flex items-center justify-center transition-all min-h-[48px] text-sm sm:text-base">
          Learn More About Our Partnerships
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section bg-guardian-cream px-4 md:px-0">
    <div class="container">
      <div class="text-center mb-8 sm:mb-12">
        <span class="inline-block px-3 sm:px-4 py-1.5 bg-guardian-green/10 text-guardian-green text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">What We Do</span>
        <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-3 sm:mb-4">
          12 Strategic Services
        </h2>
        <p class="text-lg sm:text-lg md:text-lg text-gray-600 max-w-3xl mx-auto">
          We have gone a step further from providing reinsurance broking services to providing fully-fledged reinsurance advisory and broking services.
        </p>
      </div>

      <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 sm:gap-6 max-w-7xl mx-auto">
        {services.map((service, index) => (
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-6 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100 group">
            <div class="w-10 sm:w-12 h-10 sm:h-12 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-lg sm:rounded-xl flex items-center justify-center mb-3 sm:mb-4 group-hover:scale-110 transition-transform">
              <span class="text-white font-bold text-base sm:text-lg">{(index + 1).toString().padStart(2, '0')}</span>
            </div>
            <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-1 sm:mb-2 leading-tight">{service.name}</h3>
            <p class="text-sm sm:text-sm text-gray-600 leading-relaxed hidden sm:block">{service.description}</p>
          </div>
        ))}
      </div>

      <div class="text-center mt-8 sm:mt-12">
        <a href="/our-services" class="btn bg-guardian-green text-white hover:bg-guardian-green-dark px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg font-semibold rounded-xl inline-flex items-center justify-center min-h-[52px]">
          Explore All Services
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About/History Section with Image -->
  <section class="section bg-guardian-green text-white overflow-hidden px-4 md:px-0">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <div>
          <span class="inline-block px-3 sm:px-4 py-1.5 bg-white/10 text-guardian-gold text-sm sm:text-sm font-semibold rounded-full mb-3 sm:mb-4">About Us</span>
          <h2 class="text-3xl sm:text-3xl md:text-4xl font-serif font-bold mb-4 sm:mb-6">
            Zambia's Pioneer in<br/>Reinsurance Broking
          </h2>
          <p class="text-lg sm:text-lg text-white/90 mb-4 sm:mb-6 leading-relaxed">
            Founded in January 2006 and licensed in September 2006, Guardian Reinsurance Brokers Zambia Limited became the country's first dedicated reinsurance broking firm.
          </p>
          <p class="text-base sm:text-base text-white/80 mb-6 sm:mb-8 leading-relaxed">
            For over 18 years, we have been at the forefront of providing innovative reinsurance solutions to insurers across the African market. As an endorsed partner of <a href="https://www.minerva.co.zw/" target="_blank" rel="noopener noreferrer" class="text-guardian-gold font-semibold hover:underline">Minerva Re</a>, we combine local expertise with global reach.
          </p>

          <div class="grid grid-cols-2 gap-3 sm:gap-6 mb-6 sm:mb-8">
            <div class="bg-white/10 rounded-lg sm:rounded-xl p-3 sm:p-4">
              <div class="text-3xl sm:text-3xl font-serif font-bold text-guardian-gold">2006</div>
              <div class="text-sm sm:text-sm text-white/70">Year Established</div>
