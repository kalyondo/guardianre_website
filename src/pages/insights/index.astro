---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all posts
const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Pagination
const postsPerPage = 9;
const totalPages = Math.ceil(sortedPosts.length / postsPerPage);
const currentPage = 1;
const posts = sortedPosts.slice(0, postsPerPage);

// Get featured post (most recent)
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);

// Get categories for filter
const categories = [...new Set(sortedPosts.flatMap((post) => post.data.categories || []))];

// Format date helper
const formatDate = (date: string) => new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout
  title="News & Insights"
  description="Stay informed with the latest news, insights, and updates from Guardian Reinsurance Brokers Zambia."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black py-24 md:py-32 min-h-[450px] md:min-h-[500px] overflow-hidden">
    <!-- Animated decorative sun rays -->
    <div class="absolute top-[60%] right-0 -translate-y-1/2 w-[500px] h-[500px] opacity-10">
      <svg viewBox="0 0 200 200" class="w-full h-full animate-spin-very-slow">
        {[...Array(16)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 22.5) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 22.5) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="2"
          />
        ))}
        <circle cx="100" cy="100" r="30" fill="#CBA875" opacity="0.3"/>
      </svg>
    </div>

    <!-- Floating dots decoration -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-[10%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float"></div>
      <div class="absolute top-40 left-[20%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-[15%] w-2 h-2 bg-guardian-gold/25 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute top-32 right-[25%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-40 right-[10%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1.5s;"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl">
        <!-- Animated badge -->
        <div class="hero-badge inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full text-sm mb-6 backdrop-blur-sm border border-white/10">
          <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
          <span class="text-white/90">Industry Updates & Expert Commentary</span>
        </div>

        <!-- Main heading with stagger animation -->
        <h1 class="hero-title text-4xl sm:text-5xl lg:text-6xl font-serif font-bold leading-[1.15] mb-6 text-white">
          <span class="block">News &</span>
          <span class="hero-gold-text block mt-2 pb-2">Insights</span>
        </h1>

        <!-- Subheading -->
        <p class="hero-subtitle text-xl text-white/80 max-w-2xl leading-relaxed">
          Stay informed with the latest developments in reinsurance, market trends, and Guardian Re's industry engagements across Africa.
        </p>
      </div>
    </div>

    <!-- Bottom wave decoration -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-12 md:h-16" viewBox="0 0 1440 54" fill="none" preserveAspectRatio="none">
        <path d="M0 22L60 27.3C120 32.7 240 43.3 360 43.3C480 43.3 600 32.7 720 27.3C840 22 960 22 1080 26.8C1200 32.7 1320 43.3 1380 48.7L1440 54V54H1380C1320 54 1200 54 1080 54C960 54 840 54 720 54C600 54 480 54 360 54C240 54 120 54 60 54H0V22Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Categories Filter - Sticky with elegant styling -->
  {categories.length > 0 && (
    <section class="sticky top-[72px] z-40 bg-white/95 backdrop-blur-md border-b border-gray-100 py-4 no-print shadow-sm">
      <div class="container px-4 md:px-6">
        <div class="flex items-center gap-3 overflow-x-auto pb-2 -mb-2 scrollbar-hide">
          <span class="text-sm text-gray-500 font-medium whitespace-nowrap hidden sm:block">Filter:</span>
          <a
            href="/insights"
            class="filter-pill px-5 py-2.5 rounded-full text-sm font-semibold bg-guardian-green text-white whitespace-nowrap transition-all duration-300 hover:shadow-lg hover:shadow-guardian-green/20"
          >
            All Posts
          </a>
          {categories.map((category, index) => (
            <a
              href={`/category/${category}`}
              class="filter-pill px-5 py-2.5 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-guardian-gold/20 hover:text-guardian-green whitespace-nowrap capitalize transition-all duration-300 border border-transparent hover:border-guardian-gold/30"
              style={`animation-delay: ${index * 0.05}s`}
            >
              {category.replace(/-/g, ' ')}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Featured Post Section -->
  {featuredPost && (
    <section class="py-12 md:py-16 bg-white">
      <div class="container px-4 md:px-6">
        <div class="featured-post-wrapper">
          <a href={`/insights/${featuredPost.slug}`} class="group block">
            <article class="featured-card relative grid lg:grid-cols-2 gap-8 bg-gradient-to-br from-gray-50 to-white rounded-3xl overflow-hidden border border-gray-100 hover:shadow-2xl hover:shadow-guardian-green/10 transition-all duration-500 hover:-translate-y-1">
              <!-- Image side -->
              <div class="relative aspect-[16/10] lg:aspect-auto overflow-hidden">
                <img
                  src={featuredPost.data.featuredImage || '/images/placeholder-post.jpg'}
                  alt={featuredPost.data.featuredImageAlt || featuredPost.data.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="eager"
                />
                <!-- Gradient overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent lg:bg-gradient-to-r lg:from-transparent lg:to-white/20"></div>

                <!-- Featured badge -->
                <div class="absolute top-4 left-4 px-4 py-2 bg-guardian-gold text-guardian-black text-xs font-bold uppercase tracking-wider rounded-full shadow-lg">
                  Featured
                </div>
              </div>

              <!-- Content side -->
              <div class="flex flex-col justify-center p-6 lg:p-10 lg:pr-12">
                <!-- Categories -->
                {featuredPost.data.categories && featuredPost.data.categories.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {featuredPost.data.categories.slice(0, 2).map((category: string) => (
                      <span class="px-3 py-1 bg-guardian-green/10 text-guardian-green text-xs font-semibold rounded-full capitalize">
                        {category.replace(/-/g, ' ')}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Title -->
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-serif font-bold text-gray-900 mb-4 leading-tight group-hover:text-guardian-green transition-colors duration-300">
                  {featuredPost.data.title}
                </h2>

                <!-- Excerpt -->
                {featuredPost.data.excerpt && (
                  <p class="text-gray-600 text-lg leading-relaxed mb-6 line-clamp-3">
                    {featuredPost.data.excerpt}
                  </p>
                )}

                <!-- Meta row -->
                <div class="flex items-center gap-6 text-sm text-gray-500">
                  <time datetime={featuredPost.data.date} class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    {formatDate(featuredPost.data.date)}
                  </time>
                  <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {featuredPost.data.readingTime || 3} min read
                  </span>
                </div>

                <!-- Read more link -->
                <div class="mt-6 pt-6 border-t border-gray-100">
                  <span class="inline-flex items-center text-guardian-green font-semibold group-hover:gap-3 gap-2 transition-all duration-300">
                    Read Full Article
                    <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </span>
                </div>
              </div>

              <!-- Decorative corner accent -->
              <div class="absolute bottom-0 right-0 w-32 h-32 opacity-10 pointer-events-none hidden lg:block">
                <svg viewBox="0 0 100 100" class="w-full h-full">
                  <circle cx="100" cy="100" r="80" fill="none" stroke="#1B5E4B" stroke-width="1"/>
                  <circle cx="100" cy="100" r="60" fill="none" stroke="#CBA875" stroke-width="1"/>
                  <circle cx="100" cy="100" r="40" fill="none" stroke="#1B5E4B" stroke-width="1"/>
                </svg>
              </div>
            </article>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Posts Grid Section -->
  <section class="py-12 md:py-16 bg-gray-50">
    <div class="container px-4 md:px-6">
      <!-- Section header -->
      <div class="flex items-center justify-between mb-10">
        <div>
          <h2 class="text-2xl md:text-3xl font-serif font-bold text-gray-900">Latest Articles</h2>
          <p class="text-gray-600 mt-2">Explore our recent publications and industry insights</p>
        </div>
        <div class="hidden sm:flex items-center gap-2 text-sm text-gray-500">
          <span class="w-2 h-2 bg-guardian-gold rounded-full"></span>
          <span>{sortedPosts.length} articles</span>
        </div>
      </div>

      {remainingPosts.length > 0 ? (
        <>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {remainingPosts.map((post, index) => (
              <article
                class="post-card group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl border border-gray-100 transition-all duration-500 hover:-translate-y-2"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <a href={`/insights/${post.slug}`} class="block">
                  <!-- Image -->
                  <div class="relative aspect-[16/10] overflow-hidden">
                    <img
                      src={post.data.featuredImage || '/images/placeholder-post.jpg'}
                      alt={post.data.featuredImageAlt || post.data.title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                      loading="lazy"
                    />
                    <!-- Hover overlay -->
                    <div class="absolute inset-0 bg-guardian-green/0 group-hover:bg-guardian-green/10 transition-colors duration-500"></div>

                    <!-- Gold accent line on hover -->
                    <div class="absolute bottom-0 left-0 right-0 h-1 bg-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
                  </div>

                  <!-- Content -->
                  <div class="p-6">
                    <!-- Categories -->
                    {post.data.categories && post.data.categories.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-3">
                        {post.data.categories.slice(0, 1).map((category: string) => (
                          <span class="px-3 py-1 bg-guardian-green/10 text-guardian-green text-xs font-semibold rounded-full capitalize">
                            {category.replace(/-/g, ' ')}
                          </span>
                        ))}
                      </div>
                    )}

                    <!-- Title -->
                    <h3 class="text-xl font-serif font-bold text-gray-900 mb-3 leading-tight group-hover:text-guardian-green transition-colors duration-300 line-clamp-2">
                      {post.data.title}
                    </h3>

                    <!-- Excerpt -->
                    {post.data.excerpt && (
                      <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-2">
                        {post.data.excerpt}
                      </p>
                    )}

                    <!-- Meta -->
                    <div class="flex items-center justify-between text-sm text-gray-500 pt-4 border-t border-gray-100">
                      <time datetime={post.data.date} class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        {formatDate(post.data.date)}
                      </time>
                      <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {post.data.readingTime || 3} min
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>

          <!-- Pagination -->
          {totalPages > 1 && (
            <nav class="mt-16 flex justify-center" aria-label="Pagination">
              <div class="inline-flex items-center gap-2 bg-white rounded-2xl p-2 shadow-sm border border-gray-100">
                <span class="px-5 py-2.5 rounded-xl bg-guardian-green text-white font-semibold">1</span>
                {Array.from({ length: totalPages - 1 }, (_, i) => i + 2).map((page) => (
                  <a
                    href={`/insights/page/${page}`}
                    class="px-5 py-2.5 rounded-xl text-gray-600 hover:bg-guardian-gold/10 hover:text-guardian-green font-medium transition-all duration-300"
                  >
                    {page}
                  </a>
                ))}
              </div>
            </nav>
          )}
        </>
      ) : posts.length === 0 && (
        <div class="text-center py-20 bg-white rounded-2xl border border-gray-100">
          <div class="w-20 h-20 mx-auto mb-6 bg-gray-100 rounded-2xl flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 mb-3">No posts yet</h2>
          <p class="text-gray-600 max-w-md mx-auto">We're working on bringing you valuable insights. Check back soon for updates.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA Section -->
  <section class="py-16 md:py-20 bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black text-white relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-64 h-64 border border-guardian-gold rounded-full"></div>
      <div class="absolute bottom-10 right-10 w-48 h-48 border border-guardian-gold rounded-full"></div>
    </div>

    <div class="container px-4 md:px-6 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-2 bg-white/10 rounded-full text-sm mb-6 backdrop-blur-sm border border-white/10">
          Stay Connected
        </span>
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">
          Get the Latest <span class="text-guardian-gold">Industry Insights</span>
        </h2>
        <p class="text-xl text-white/80 mb-8">
          Follow Guardian Re for expert analysis, market updates, and reinsurance trends from across Africa.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://www.linkedin.com/company/guardian-re-brokers/"
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center justify-center gap-3 px-8 py-4 bg-guardian-gold text-guardian-black font-semibold rounded-xl hover:bg-guardian-gold-light transition-all duration-300 hover:shadow-lg hover:shadow-guardian-gold/30 hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Follow on LinkedIn
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a
            href="/connect"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 text-white font-semibold rounded-xl border border-white/30 hover:bg-white/20 transition-all duration-300 hover:-translate-y-0.5"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Custom animations */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.1; transform: translate(-50%, -50%) scale(1.05); }
  }

  @keyframes spin-very-slow {
    from { transform: translateY(-50%) rotate(0deg); }
    to { transform: translateY(-50%) rotate(360deg); }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes scale-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes gold-shimmer {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .animate-spin-very-slow {
    animation: spin-very-slow 60s linear infinite;
  }

  /* Hero animations */
  .hero-badge {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  .hero-title {
    animation: slide-in-left 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  .hero-gold-text {
    background: linear-gradient(
      90deg,
      #CBA875 0%,
      #E8D5B5 25%,
      #CBA875 50%,
      #E8D5B5 75%,
      #CBA875 100%
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gold-shimmer 4s linear infinite;
  }

  .hero-subtitle {
    animation: fade-in-up 0.8s ease-out 0.4s forwards;
    opacity: 0;
  }

  .hero-diagonal-line {
    animation: fade-in-up 1s ease-out 0.6s forwards;
    opacity: 0;
  }

  /* Filter pills animation */
  .filter-pill {
    animation: fade-in-up 0.5s ease-out forwards;
    opacity: 0;
  }

  /* Featured post animation */
  .featured-post-wrapper {
    animation: scale-in 0.8s ease-out forwards;
  }

  /* Post cards staggered animation */
  .post-card {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Line clamp utility */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Hide scrollbar for category filter */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
