---
import BaseLayout from '../layouts/BaseLayout.astro';

// Core broking services (1-6)
const coreBrokingServices = [
  {
    number: '01',
    name: 'Reinsurance Structuring',
    description: 'We design bespoke reinsurance programmes tailored to the specific risk profile, capital position, and strategic priorities of each client.',
    deliverables: ['Programme design and optimisation', 'Retention analysis and recommendations', 'Treaty wording review and development', 'Capacity allocation strategies']
  },
  {
    number: '02',
    name: 'Negotiation & Placement',
    description: 'Our experienced broking team negotiates with reinsurers on behalf of our clients to secure favourable terms, competitive pricing, and appropriate coverage.',
    deliverables: ['Market presentation and submission', 'Terms negotiation and benchmarking', 'Placement coordination across markets', 'Contract finalisation and documentation']
  },
  {
    number: '03',
    name: 'Reinsurance Security Analysis',
    description: 'We conduct rigorous assessments of reinsurer financial strength, creditworthiness, and claims-paying ability to inform counterparty decisions.',
    deliverables: ['Credit rating analysis and monitoring', 'Financial strength assessment', 'Counterparty concentration review', 'Security panel recommendations']
  },
  {
    number: '04',
    name: 'Catastrophe Management',
    description: 'Expert guidance on catastrophic risk exposures, including natural disasters, large-loss events, and accumulation scenarios.',
    deliverables: ['Catastrophe exposure assessment', 'Modelling and scenario analysis', 'Event response coordination', 'Loss estimation and notification']
  },
  {
    number: '05',
    name: 'Analytics, Products & Solutions',
    description: 'Our analytical capabilities enable data-driven decision-making across all aspects of reinsurance programme management.',
    deliverables: ['Portfolio performance analysis', 'Loss experience studies', 'Pricing support and validation', 'Product development assistance']
  },
  {
    number: '06',
    name: 'Portfolio Optimisation',
    description: 'We assist clients in optimising their reinsurance arrangements to achieve the most efficient use of capital while maintaining appropriate risk protection.',
    deliverables: ['Capital efficiency analysis', 'Programme cost-benefit assessment', 'Portfolio rebalancing recommendations', 'Risk-adjusted return analysis']
  },
];

// Advisory services (7-9)
const advisoryServices = [
  {
    number: '07',
    name: 'Peer Analysis & Benchmarking',
    description: 'Competitive intelligence and benchmarking services to help clients understand their market position relative to peers.',
    deliverables: ['Peer comparison studies', 'Market practice benchmarking', 'Performance metric analysis', 'Competitive positioning insights']
  },
  {
    number: '08',
    name: 'Rating Advisory',
    description: 'Expert guidance to insurers seeking to maintain or improve their credit ratings, covering reinsurance-related aspects of rating agency requirements.',
    deliverables: ['Rating agency liaison support', 'Reinsurance programme assessment', 'Documentation and presentation', 'Ongoing monitoring and advice']
  },
  {
    number: '09',
    name: 'Life & Health Reinsurance',
    description: 'Specialised broking services for life insurers, health insurers, and pension schemes, addressing the unique requirements of long-term risks.',
    deliverables: ['Life treaty placement', 'Health reinsurance solutions', 'Mortality and morbidity risk transfer', 'Product development support']
  },
];

// Operational services (10-12)
const operationalServices = [
  {
    number: '10',
    name: 'Market Intelligence',
    description: 'Guardian Re maintains close relationships with global reinsurance markets, providing timely and relevant market intelligence to support informed decision-making.',
    deliverables: ['Market trend analysis', 'Capacity and pricing updates', 'Regulatory development monitoring', 'Strategic market insights']
  },
  {
    number: '11',
    name: 'Policy Administration',
    description: 'Comprehensive administrative support for the ongoing management of reinsurance contracts, ensuring accurate documentation and efficient processing.',
    deliverables: ['Contract documentation management', 'Premium and claims bordereaux', 'Statement reconciliation', 'Regulatory reporting support']
  },
  {
    number: '12',
    name: 'Run-off Management',
    description: 'Professional run-off management services for clients with legacy portfolios or discontinued lines of business.',
    deliverables: ['Legacy portfolio assessment', 'Run-off strategy development', 'Claims management and commutation', 'Portfolio transfer facilitation']
  },
];

// Approach pillars
const approachPillars = [
  {
    title: 'Technical Expertise',
    description: 'Deep knowledge of reinsurance structures, markets, and best practices.',
    icon: 'academic'
  },
  {
    title: 'Client-Centric',
    description: 'Understanding your business before recommending solutions.',
    icon: 'users'
  },
  {
    title: 'Independent Advice',
    description: 'Objective guidance aligned with your interests.',
    icon: 'scale'
  },
];
---

<BaseLayout title="Our Services | Guardian Reinsurance Brokers">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black py-24 md:py-32 overflow-hidden">
    <!-- Animated decorative sun rays -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] opacity-10">
      <svg viewBox="0 0 200 200" class="w-full h-full animate-spin-very-slow">
        {[...Array(16)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 22.5) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 22.5) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="2"
          />
        ))}
        <circle cx="100" cy="100" r="30" fill="#CBA875" opacity="0.3"/>
      </svg>
    </div>

    <!-- Floating dots decoration -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-[10%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float"></div>
      <div class="absolute top-40 left-[20%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-[15%] w-2 h-2 bg-guardian-gold/25 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute top-32 right-[25%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-40 right-[10%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1.5s;"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="animate-fade-in-up inline-flex items-center gap-2 px-5 py-2.5 bg-white/10 rounded-full text-sm text-white mb-8 backdrop-blur-sm border border-white/10">
          <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
          Full-Service Reinsurance Advisory
        </div>

        <h1 class="animate-fade-in-up text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-6" style="animation-delay: 0.1s;">
          Broking & Advisory
          <span class="block section-gold-text mt-2">Services</span>
        </h1>

        <p class="animate-fade-in-up text-xl text-white/90 leading-relaxed max-w-2xl mx-auto" style="animation-delay: 0.2s;">
          Comprehensive reinsurance broking and advisory services designed to support your strategic objectives across twelve distinct areas of expertise.
        </p>
      </div>
    </div>

  </section>

  <!-- Services Overview - Floating Card -->
  <section class="relative -mt-16 z-20 px-4">
    <div class="container">
      <div class="animate-scale-in max-w-4xl mx-auto bg-white rounded-3xl shadow-2xl border border-gray-100 p-8 md:p-12 overflow-hidden relative">
        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-guardian-green via-guardian-gold to-guardian-green"></div>

        <p class="text-lg text-gray-600 leading-relaxed mb-8 text-center">
          Guardian Re provides comprehensive reinsurance broking and advisory services to insurance companies operating in Zambia and across the African continent. We have evolved from traditional placement services to offer fully integrated reinsurance advisory and broking solutions.
        </p>

        <!-- Service Count Badge -->
        <div class="flex justify-center">
          <div class="inline-flex items-center gap-4 px-8 py-4 bg-gradient-to-r from-guardian-green to-guardian-green-dark text-white rounded-2xl shadow-lg">
            <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
              </svg>
            </div>
            <div>
              <p class="text-3xl font-bold">12</p>
              <p class="text-sm text-white/80">Strategic Services</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Broking Services Grid -->
  <section class="py-20 md:py-28 bg-gray-50">
    <div class="container">
      <div class="mb-16 text-center md:text-left">
        <span class="animate-fade-in-up inline-block px-5 py-2 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Services 01-06</span>
        <h2 class="animate-fade-in-up text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-gray-900 mb-4" style="animation-delay: 0.1s;">
          Core Broking <span class="section-gold-text">Services</span>
        </h2>
        <p class="animate-fade-in-up text-lg text-gray-600 max-w-2xl" style="animation-delay: 0.2s;">
          Essential reinsurance broking capabilities delivered by experienced professionals with deep technical knowledge.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {coreBrokingServices.map((service, index) => (
          <div
            class="animate-fade-in-up group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 flex flex-col"
            style={`animation-delay: ${0.1 * index}s;`}
          >
            <!-- Gold accent line on hover -->
            <div class="h-1 bg-gradient-to-r from-guardian-gold via-guardian-gold-light to-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>

            <div class="p-6 md:p-8 flex-1 flex flex-col">
              <div class="w-14 h-14 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-2xl flex items-center justify-center text-white font-bold text-lg mb-5 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                {service.number}
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-guardian-green transition-colors">{service.name}</h3>
              <p class="text-gray-600 mb-5 leading-relaxed">{service.description}</p>

              <!-- Deliverables -->
              <div class="border-t border-gray-100 pt-5 mt-auto">
                <p class="text-xs font-semibold text-guardian-gold uppercase tracking-wider mb-3">Key Deliverables</p>
                <ul class="space-y-2">
                  {service.deliverables.map((item) => (
                    <li class="text-sm text-gray-600 flex items-start gap-2">
                      <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full mt-1.5 flex-shrink-0"></span>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Advisory Services -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container">
      <div class="mb-16 text-center md:text-left">
        <span class="animate-fade-in-up inline-block px-5 py-2 bg-guardian-gold/10 text-guardian-gold text-sm font-semibold rounded-full mb-4">Services 07-09</span>
        <h2 class="animate-fade-in-up text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-gray-900 mb-4" style="animation-delay: 0.1s;">
          Advisory <span class="section-gold-text">Services</span>
        </h2>
        <p class="animate-fade-in-up text-lg text-gray-600 max-w-2xl" style="animation-delay: 0.2s;">
          Strategic advisory capabilities that go beyond traditional placement to deliver comprehensive client support.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 md:gap-8">
        {advisoryServices.map((service, index) => (
          <div
            class="animate-slide-in-up group relative bg-gradient-to-br from-guardian-cream to-white rounded-2xl p-8 border-2 border-guardian-gold/20 hover:border-guardian-gold/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-xl flex flex-col"
            style={`animation-delay: ${0.15 * index}s;`}
          >
            <!-- Decorative corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 opacity-10">
              <svg viewBox="0 0 80 80" class="w-full h-full">
                <path d="M80 0 L80 80 L0 80" fill="none" stroke="#CBA875" stroke-width="2"/>
              </svg>
            </div>

            <div class="w-14 h-14 bg-gradient-to-br from-guardian-gold/30 to-guardian-gold/10 rounded-2xl flex items-center justify-center mb-5 group-hover:scale-110 transition-transform duration-300">
              <span class="text-guardian-gold font-bold text-lg">{service.number}</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-guardian-gold transition-colors">{service.name}</h3>
            <p class="text-gray-600 mb-5 leading-relaxed">{service.description}</p>

            <!-- Deliverables -->
            <div class="border-t border-guardian-gold/20 pt-5 mt-auto">
              <p class="text-xs font-semibold text-guardian-gold uppercase tracking-wider mb-3">Key Deliverables</p>
              <ul class="space-y-2">
                {service.deliverables.map((item) => (
                  <li class="text-sm text-gray-600 flex items-start gap-2">
                    <span class="w-1.5 h-1.5 bg-guardian-gold rounded-full mt-1.5 flex-shrink-0"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Operational Services -->
  <section class="py-20 md:py-28 bg-gray-50">
    <div class="container">
      <div class="mb-16 text-center md:text-left">
        <span class="animate-fade-in-up inline-block px-5 py-2 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Services 10-12</span>
        <h2 class="animate-fade-in-up text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-gray-900 mb-4" style="animation-delay: 0.1s;">
          Operational <span class="section-gold-text">Excellence</span>
        </h2>
        <p class="animate-fade-in-up text-lg text-gray-600 max-w-2xl" style="animation-delay: 0.2s;">
          Supporting services that ensure efficient programme administration and ongoing market connectivity.
        </p>
      </div>

      <div class="space-y-6 max-w-5xl mx-auto">
        {operationalServices.map((service, index) => (
          <div
            class="animate-slide-in-left group bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500"
            style={`animation-delay: ${0.15 * index}s;`}
          >
            <div class="flex flex-col md:flex-row">
              <!-- Number badge column -->
              <div class="bg-gradient-to-br from-guardian-green to-guardian-green-dark p-6 md:p-8 flex items-center justify-center md:w-32">
                <span class="text-4xl md:text-5xl font-bold text-white/90">{service.number}</span>
              </div>

              <!-- Content column -->
              <div class="flex-1 p-6 md:p-8">
                <h3 class="text-2xl font-semibold text-gray-900 mb-3 group-hover:text-guardian-green transition-colors">{service.name}</h3>
                <p class="text-gray-600 mb-5 leading-relaxed">{service.description}</p>

                <div class="flex flex-wrap gap-2">
                  {service.deliverables.map((item) => (
                    <span class="px-4 py-2 bg-gray-100 text-gray-700 text-sm rounded-full group-hover:bg-guardian-green/10 group-hover:text-guardian-green transition-colors">
                      {item}
                    </span>
                  ))}
                </div>
              </div>
            </div>

            <!-- Gold accent line on hover -->
            <div class="h-1 bg-gradient-to-r from-guardian-gold via-guardian-gold-light to-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="py-20 md:py-28 bg-guardian-green text-white relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="approach-grid" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="10" cy="10" r="1" fill="#CBA875"/>
        </pattern>
        <rect width="100%" height="100%" fill="url(#approach-grid)"/>
      </svg>
    </div>

    <!-- Floating decorative elements -->
    <div class="absolute top-10 left-10 w-32 h-32 border border-guardian-gold/20 rounded-full animate-float"></div>
    <div class="absolute bottom-10 right-10 w-24 h-24 border border-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1s;"></div>

    <div class="container relative z-10">
      <div class="text-center mb-16">
        <span class="animate-fade-in-up inline-block px-5 py-2 bg-white/10 text-guardian-gold text-sm font-semibold rounded-full mb-6 backdrop-blur-sm border border-white/10">How We Work</span>
        <h2 class="animate-fade-in-up text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-6" style="animation-delay: 0.1s;">
          Our <span class="section-gold-text">Approach</span>
        </h2>
        <p class="animate-fade-in-up text-xl text-white/90 max-w-3xl mx-auto leading-relaxed" style="animation-delay: 0.2s;">
          Guardian Re combines technical expertise with a client-centric approach. We invest time in understanding each client's business, risk appetite, and strategic objectives before recommending solutions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {approachPillars.map((pillar, index) => (
          <div
            class="animate-fade-in-up group text-center p-8 rounded-3xl bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-all duration-500 hover:-translate-y-2"
            style={`animation-delay: ${0.15 * index}s;`}
          >
            <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-guardian-gold/30 to-guardian-gold/10 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              {pillar.icon === 'academic' && (
                <svg class="w-10 h-10 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                </svg>
              )}
              {pillar.icon === 'users' && (
                <svg class="w-10 h-10 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              )}
              {pillar.icon === 'scale' && (
                <svg class="w-10 h-10 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-3">{pillar.title}</h3>
            <p class="text-white/80 leading-relaxed">{pillar.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 bg-white relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-64 h-64 bg-guardian-green/5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-guardian-gold/5 rounded-full translate-x-1/2 translate-y-1/2"></div>

    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="animate-scale-in bg-white rounded-3xl shadow-2xl border border-gray-100 p-10 md:p-14">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-guardian-green to-guardian-green-dark rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>

          <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">
            Discuss Your <span class="section-gold-text">Requirements</span>
          </h2>
          <p class="text-lg text-gray-600 mb-10 leading-relaxed">
            To discuss how Guardian Re can support your reinsurance requirements, please contact our team.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/connect" class="group inline-flex items-center justify-center gap-3 bg-gradient-to-r from-guardian-green to-guardian-green-dark text-white px-8 py-4 rounded-xl font-semibold text-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              Contact Us
              <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="tel:+260211258883" class="group inline-flex items-center justify-center gap-3 bg-gray-100 text-gray-900 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-200 transition-all duration-300 hover:-translate-y-1">
              <svg class="w-5 h-5 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              +260 211 258 883
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Premium animations */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-up {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
