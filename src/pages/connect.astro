---
import BaseLayout from '../layouts/BaseLayout.astro';

// Contact information
const contactInfo = {
  address: {
    line1: 'Plot 4162, Alex Masala Close',
    line2: 'Off Chaholi Road, Rhodes Park',
    city: 'Lusaka',
    country: 'Zambia',
  },
  phones: ['+260 211 258 883', '+260 211 258 884'],
  email: 'info@guardianreinsurance.co.zm',
  hours: {
    weekdays: '08:00 - 17:00',
    weekend: 'Closed',
  },
  social: {
    linkedin: 'https://www.linkedin.com/company/guardian-reinsurance-brokers/',
  },
};

// Key contact person
const keyContact = {
  name: 'Kipson Mukoyo',
  role: 'Accountant',
  phone: '+260 211 258 883',
  mobile: '+260 975 954 143',
  email: 'kipson.mukoyo@guardianreinsurance.co.zm',
  image: '/images/team/kipson-mukoyo.jpg',
};

// Quick contact options
const quickContacts = [
  { icon: 'phone', label: 'Call Us', value: '+260 211 258 883', href: 'tel:+260211258883' },
  { icon: 'email', label: 'Email Us', value: 'info@guardianreinsurance.co.zm', href: 'mailto:info@guardianreinsurance.co.zm' },
  { icon: 'whatsapp', label: 'WhatsApp', value: '+260 975 954 143', href: 'https://wa.me/260975954143' },
];

// Service promise items
const servicePromises = [
  {
    icon: 'lightning',
    title: 'Quick Response',
    description: 'We respond to all inquiries within 24 business hours.'
  },
  {
    icon: 'users',
    title: 'Expert Team',
    description: '70+ years of combined reinsurance experience at your service.'
  },
  {
    icon: 'shield',
    title: 'Trusted Partner',
    description: 'Licensed by the Pensions and Insurance Authority (PIA).'
  },
];
---

<BaseLayout title="Contact Us | Guardian Reinsurance Brokers">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black py-24 md:py-32 overflow-hidden">
    <!-- Animated decorative sun rays -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] opacity-10">
      <svg viewBox="0 0 200 200" class="w-full h-full animate-spin-very-slow">
        {[...Array(16)].map((_, i) => (
          <line
            x1="100"
            y1="100"
            x2={100 + 100 * Math.cos((i * 22.5) * Math.PI / 180)}
            y2={100 + 100 * Math.sin((i * 22.5) * Math.PI / 180)}
            stroke="#CBA875"
            stroke-width="2"
          />
        ))}
        <circle cx="100" cy="100" r="30" fill="#CBA875" opacity="0.3"/>
      </svg>
    </div>

    <!-- Floating dots decoration -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-[10%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float"></div>
      <div class="absolute top-40 left-[20%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-[15%] w-2 h-2 bg-guardian-gold/25 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute top-32 right-[25%] w-2 h-2 bg-guardian-gold/30 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-40 right-[10%] w-3 h-3 bg-guardian-gold/20 rounded-full animate-float" style="animation-delay: 1.5s;"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl">
        <div class="animate-fade-in-up inline-flex items-center gap-2 px-5 py-2.5 bg-white/10 rounded-full text-sm text-white mb-8 backdrop-blur-sm border border-white/10">
          <span class="w-2 h-2 bg-guardian-gold rounded-full animate-pulse"></span>
          We're Here to Help
        </div>

        <h1 class="animate-fade-in-up text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-white mb-6" style="animation-delay: 0.1s;">
          Get in
          <span class="block section-gold-text mt-2">Touch</span>
        </h1>

        <p class="animate-fade-in-up text-xl text-white/90 leading-relaxed max-w-2xl" style="animation-delay: 0.2s;">
          Ready to discuss your reinsurance needs? Our experienced team is here to provide tailored solutions for your business.
        </p>
      </div>
    </div>

  </section>

  <!-- Quick Contact Cards -->
  <section class="relative -mt-12 z-20 px-4 md:px-0">
    <div class="container">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 md:gap-6 max-w-5xl mx-auto">
        {quickContacts.map((contact, index) => (
          <a
            href={contact.href}
            class="animate-fade-in-up group bg-white rounded-2xl md:rounded-3xl p-6 md:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 overflow-hidden relative"
            style={`animation-delay: ${0.1 * index}s;`}
          >
            <!-- Gold accent line on hover -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-guardian-gold via-guardian-gold-light to-guardian-gold transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>

            <div class="flex items-center gap-4">
              <div class="w-14 h-14 bg-gradient-to-br from-guardian-green/10 to-guardian-green/5 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                {contact.icon === 'phone' && (
                  <svg class="w-7 h-7 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                )}
                {contact.icon === 'email' && (
                  <svg class="w-7 h-7 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                )}
                {contact.icon === 'whatsapp' && (
                  <svg class="w-7 h-7 text-guardian-green" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                )}
              </div>
              <div class="min-w-0 flex-1">
                <p class="text-sm text-gray-500">{contact.label}</p>
                <p class="font-semibold text-gray-900 group-hover:text-guardian-green transition-colors truncate" title={contact.value}>{contact.value}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="py-20 md:py-28 bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
        <!-- Contact Form -->
        <div class="order-2 lg:order-1 animate-slide-in-left">
          <div class="bg-gray-50 rounded-3xl p-8 md:p-10 lg:p-12 border border-gray-100">
            <h2 class="text-2xl md:text-3xl font-serif font-bold text-gray-900 mb-2">
              Send Us a <span class="section-gold-text">Message</span>
            </h2>
            <p class="text-gray-600 mb-8">Fill out the form below and we'll get back to you within 24 hours.</p>

            <form class="space-y-6" id="contact-form">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all"
                  placeholder="john@company.com"
                />
              </div>

              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company / Organization</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all"
                  placeholder="Your company name"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all"
                >
                  <option value="">Select an inquiry type</option>
                  <option value="quote">Request a Quote</option>
                  <option value="services">Our Services</option>
                  <option value="partnership">Partnership Inquiry</option>
                  <option value="general">General Inquiry</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Your Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-5 py-4 rounded-xl border border-gray-200 bg-white text-gray-900 focus:ring-2 focus:ring-guardian-green focus:border-transparent transition-all resize-none"
                  placeholder="Tell us about your reinsurance needs..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="group w-full bg-gradient-to-r from-guardian-green to-guardian-green-dark text-white py-5 text-lg font-semibold rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1 flex items-center justify-center gap-3"
              >
                <span>Send Message</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
            </form>
          </div>
        </div>

        <!-- Contact Details & Map -->
        <div class="order-1 lg:order-2 space-y-8 animate-slide-in-right">
          <!-- Office Location Card -->
          <div class="relative bg-gradient-to-br from-guardian-green via-guardian-green-dark to-guardian-black rounded-3xl p-8 md:p-10 text-white overflow-hidden">
            <!-- Decorative pattern -->
            <div class="absolute top-0 right-0 w-48 h-48 opacity-10">
              <svg viewBox="0 0 100 100" class="w-full h-full">
                <pattern id="contact-pattern" width="10" height="10" patternUnits="userSpaceOnUse">
                  <circle cx="5" cy="5" r="1.5" fill="#CBA875"/>
                </pattern>
                <rect width="100" height="100" fill="url(#contact-pattern)"/>
              </svg>
            </div>

            <h2 class="text-2xl md:text-3xl font-serif font-bold mb-8 relative z-10">Head Office</h2>

            <div class="space-y-6 relative z-10">
              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-guardian-gold mb-1">Guardian Reinsurance Brokers (Z) Limited</p>
                  <p class="text-white/90">{contactInfo.address.line1}</p>
                  <p class="text-white/90">{contactInfo.address.line2}</p>
                  <p class="text-white/90">{contactInfo.address.city}, {contactInfo.address.country}</p>
                </div>
              </div>

              <!-- Phone Numbers -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-guardian-gold mb-1">Telephone</p>
                  {contactInfo.phones.map((phone) => (
                    <a href={`tel:${phone.replace(/\s/g, '')}`} class="block text-white/90 hover:text-white transition-colors">
                      {phone}
                    </a>
                  ))}
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-guardian-gold mb-1">Email</p>
                  <a href={`mailto:${contactInfo.email}`} class="text-white/90 hover:text-white transition-colors break-all">
                    {contactInfo.email}
                  </a>
                </div>
              </div>

              <!-- Office Hours -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-guardian-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-guardian-gold mb-1">Office Hours</p>
                  <p class="text-white/90">Monday - Friday: {contactInfo.hours.weekdays}</p>
                  <p class="text-white/90">Saturday & Sunday: {contactInfo.hours.weekend}</p>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="mt-8 pt-6 border-t border-white/20 relative z-10">
              <p class="text-sm text-white/60 mb-4">Connect with us</p>
              <div class="flex gap-3">
                <a
                  href={contactInfo.social.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center hover:bg-guardian-gold hover:text-guardian-black transition-all duration-300"
                  aria-label="LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Key Contact Person -->
          <div class="bg-white rounded-2xl p-6 md:p-8 shadow-xl border border-gray-100 hover:shadow-2xl transition-all duration-500">
            <h3 class="text-lg font-semibold text-gray-900 mb-5">Key Contact</h3>
            <div class="flex items-center gap-5">
              <div class="w-18 h-18 rounded-2xl overflow-hidden ring-4 ring-guardian-green/10 flex-shrink-0 bg-gradient-to-br from-guardian-green/10 to-guardian-green/5 flex items-center justify-center">
                <svg class="w-10 h-10 text-guardian-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-gray-900 text-lg">{keyContact.name}</p>
                <p class="text-guardian-gold font-medium">{keyContact.role}</p>
              </div>
            </div>
            <div class="mt-6 pt-6 border-t border-gray-100 space-y-3">
              <a href={`tel:${keyContact.phone.replace(/\s/g, '')}`} class="flex items-center gap-3 text-gray-600 hover:text-guardian-green transition-colors group">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-guardian-green/10 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <span>T: {keyContact.phone}</span>
              </a>
              <a href={`tel:${keyContact.mobile.replace(/\s/g, '')}`} class="flex items-center gap-3 text-gray-600 hover:text-guardian-green transition-colors group">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-guardian-green/10 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
                <span>M: {keyContact.mobile}</span>
              </a>
              <a href={`mailto:${keyContact.email}`} class="flex items-start gap-3 text-gray-600 hover:text-guardian-green transition-colors group">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-guardian-green/10 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <span class="break-all">E: {keyContact.email}</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Maps Section -->
  <section class="py-20 md:py-28 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <span class="animate-fade-in-up inline-block px-5 py-2 bg-guardian-green/10 text-guardian-green text-sm font-semibold rounded-full mb-4">Our Location</span>
        <h2 class="animate-fade-in-up text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-gray-900 mb-4" style="animation-delay: 0.1s;">
          Find <span class="section-gold-text">Us</span>
        </h2>
        <p class="animate-fade-in-up text-lg text-gray-600 max-w-2xl mx-auto" style="animation-delay: 0.2s;">
          Visit our office in Rhodes Park, Lusaka. We're conveniently located off Chaholi Road.
        </p>
      </div>

      <!-- Map Container -->
