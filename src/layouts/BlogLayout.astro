---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  updated?: string;
  excerpt?: string;
  categories?: string[];
  tags?: string[];
  featuredImage?: string;
  featuredImageAlt?: string;
  readingTime?: number;
  authorId?: number;
}

const {
  title,
  date,
  updated,
  excerpt = '',
  categories = [],
  tags = [],
  featuredImage,
  featuredImageAlt = '',
  readingTime = 1,
  authorId,
} = Astro.props;

// Format dates
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdated = updated
  ? new Date(updated).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;
---

<BaseLayout
  title={title}
  description={excerpt}
  ogImage={featuredImage}
  type="article"
  publishedTime={date}
  modifiedTime={updated}
>
  <article class="py-8 md:py-16">
    <div class="container max-w-4xl">
      <!-- Header -->
      <header class="mb-8 md:mb-12">
        <!-- Categories -->
        {categories.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4">
            {categories.map((category) => (
              <a
                href={`/category/${category}`}
                class="badge-primary capitalize hover:opacity-80 transition-opacity"
              >
                {category.replace(/-/g, ' ')}
              </a>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold font-display text-gray-900 dark:text-white mb-6 text-balance">
          {title}
        </h1>

        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400">
          <time datetime={date} class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formattedDate}
          </time>

          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {readingTime} min read
          </span>

          {formattedUpdated && formattedUpdated !== formattedDate && (
            <span class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Updated {formattedUpdated}
            </span>
          )}
        </div>
      </header>

      <!-- Featured Image -->
      {featuredImage && (
        <figure class="mb-8 md:mb-12 -mx-4 sm:mx-0">
          <img
            src={featuredImage}
            alt={featuredImageAlt || title}
            class="w-full rounded-none sm:rounded-xl shadow-lg"
            loading="eager"
            onerror="this.style.display='none';"
          />
        </figure>
      )}

      <!-- Content -->
      <div class="prose prose-lg dark:prose-dark max-w-none">
        <slot />
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Tags:</span>
            {tags.map((tag) => (
              <a
                href={`/tag/${tag}`}
                class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              >
                #{tag.replace(/-/g, ' ')}
              </a>
            ))}
          </div>
        </footer>
      )}

      <!-- Share -->
      <div class="mt-8 flex items-center justify-between">
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Share this article:</span>
        <div class="flex items-center space-x-3">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(`https://guardianreinsurance.co.zm/insights/${Astro.url.pathname}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-600 dark:text-gray-400 hover:text-guardian-primary dark:hover:text-guardian-accent transition-colors"
            aria-label="Share on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(`https://guardianreinsurance.co.zm/insights/${Astro.url.pathname}`)}&title=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-600 dark:text-gray-400 hover:text-guardian-primary dark:hover:text-guardian-accent transition-colors"
            aria-label="Share on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
